<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ログイン</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: white;
      }
      .error-message {
        color: red;
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="login-container">
      <h2 class="text-center mb-4">ログイン</h2>
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message text-center"><%= error %></div>
      <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">ユーザー名</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">パスワード</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
            pattern="[0-9]{4}"
            title="4桁の数字を入力してください"
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">ログイン</button>
      </form>

      <!-- Login Logs Button -->
      <div class="mt-4 text-center">
        <button
          class="btn btn-success"
          type="button"
          onclick="showLogsDialog()"
        >
          ログイン履歴
        </button>
      </div>

      <!-- Password Dialog Modal -->
      <div class="modal fade" id="logsPasswordModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">パスワードを入力してください</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <input
                type="password"
                class="form-control"
                id="logsPassword"
                pattern="[0-9]{4}"
                placeholder="4桁の数字を入力"
              />
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                キャンセル
              </button>
              <button
                type="button"
                class="btn btn-primary"
                onclick="validateLogsPassword()"
              >
                確認
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Logs Display Modal -->
      <div class="modal fade" id="logsDisplayModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">ログイン履歴</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <div
                class="logs-container"
                style="max-height: 400px; overflow-y: auto"
              >
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>日時</th>
                      <th>ユーザー</th>
                      <th>状態</th>
                      <th>IP</th>
                      <th>場所</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (logs && logs.length > 0) { %> <%
                    logs.forEach(function(log) { %>
                    <tr
                      class="<%= log.status === 'success' ? 'table-success' : 'table-danger' %>"
                    >
                      <td>
                        <%= new Date(log.login_time).toLocaleString('ja-JP') %>
                      </td>
                      <td><%= log.username %></td>
                      <td><%= log.status === 'success' ? '成功' : '失敗' %></td>
                      <td><%= log.ip_address %></td>
                      <td><%= log.location %></td>
                    </tr>
                    <% }); %> <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center">ログはありません</td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Add Bootstrap JS and required scripts -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
      <script>
        const logsPassword = "1234"; // Set your desired 4-digit password
        const passwordModal = new bootstrap.Modal(
          document.getElementById("logsPasswordModal")
        );
        const logsModal = new bootstrap.Modal(
          document.getElementById("logsDisplayModal")
        );

        function showLogsDialog() {
          passwordModal.show();
        }

        function validateLogsPassword() {
          const input = document.getElementById("logsPassword");
          if (input.value === logsPassword) {
            passwordModal.hide();
            logsModal.show();
            input.value = ""; // Clear password
          } else {
            alert("パスワードが正しくありません");
            input.value = ""; // Clear password
          }
        }
      </script>
    </div>
  </body>
</html>
