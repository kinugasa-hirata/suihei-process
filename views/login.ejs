<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ログイン</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: white;
      }
      .error-message {
        color: red;
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="login-container">
      <h2 class="text-center mb-4">ログイン</h2>
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message text-center"><%= error %></div>
      <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">ユーザー名</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">パスワード</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
            pattern="[0-9]{4}"
            title="4桁の数字を入力してください"
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">ログイン</button>
      </form>

      <!-- Login Logs Section -->
      <div class="mt-5">
        <h5 class="text-center mb-3">ログイン履歴</h5>
        <div class="logs-container" style="max-height: 200px; overflow-y: auto">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>日時</th>
                <th>ユーザー</th>
                <th>状態</th>
                <th>IP</th>
              </tr>
            </thead>
            <tbody>
              <% if (logs && logs.length > 0) { %> <% logs.forEach(function(log)
              { %>
              <tr
                class="<%= log.status === 'success' ? 'table-success' : 'table-danger' %>"
              >
                <td><%= new Date(log.login_time).toLocaleString('ja-JP') %></td>
                <td><%= log.username %></td>
                <td><%= log.status === 'success' ? '成功' : '失敗' %></td>
                <td><%= log.ip_address %></td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="4" class="text-center">ログはありません</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
