<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ファイルインベーダー</title>
    <style>
      body {
        margin: 0;
        overflow: hidden;
        background: #000;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
      }
      #gameCanvas {
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin-top: 20px;
      }
      .game-header {
        width: 800px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        color: rgba(255, 255, 255, 0.2);
      }
      .score {
        font-size: 24px;
        color: rgba(255, 255, 255, 0.2);
      }
      .back-button {
        padding: 8px 16px;
        background: transparent;
        color: rgba(255, 255, 255, 0.2);
        text-decoration: none;
        border-radius: 4px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: border-color 0.3s;
      }
      .back-button:hover {
        border-color: rgba(255, 255, 255, 0.3);
      }
    </style>
  </head>
  <body>
    <div class="game-header">
      <div class="score">スコア: <span id="scoreDisplay">0</span></div>
      <a href="/" class="back-button">◂</a>
    </div>
    <canvas id="gameCanvas" width="800" height="600"></canvas>

    <script>
      const canvas = document.getElementById("gameCanvas");
      const ctx = canvas.getContext("2d");
      const scoreDisplay = document.getElementById("scoreDisplay");

      // Game objects
      const paddle = {
        x: canvas.width / 2 - 50,
        y: canvas.height - 30,
        width: 100,
        height: 10,
        speed: 12,
      };

      const ball = {
        x: canvas.width / 2,
        y: canvas.height - 50,
        radius: 8,
        speed: 7,
        dx: 0,
        dy: -5,
      };

      // File cards as blocks
      let blocks = [];
      const blockRows = 2;
      const blockCols = 8;
      const blockPadding = 10;
      const blockWidth = 70;
      const blockHeight = 40;

      // Initialize blocks with file numbers
      function initBlocks() {
        blocks = [];
        let fileNumber = 240;
        for (let i = 0; i < blockRows; i++) {
          for (let j = 0; j < blockCols; j++) {
            blocks.push({
              x: j * (blockWidth + blockPadding) + 50,
              y: i * (blockHeight + blockPadding) + 50,
              width: blockWidth,
              height: blockHeight,
              number: fileNumber++,
              visible: true,
              dx: (Math.random() * 1 - 0.5) * 0.5, // Slower horizontal movement
              dy: 0.1, // Slower downward movement
            });
          }
        }
      }

      // Game state
      let score = 0;
      let gameOver = false;
      let rightPressed = false;
      let leftPressed = false;

      // Event listeners
      document.addEventListener("keydown", (e) => {
        if (e.key === "." || e.key === "ArrowRight") rightPressed = true;
        if (e.key === "," || e.key === "ArrowLeft") leftPressed = true;
      });

      document.addEventListener("keyup", (e) => {
        if (e.key === "." || e.key === "ArrowRight") rightPressed = false;
        if (e.key === "," || e.key === "ArrowLeft") leftPressed = false;
      });

      function movePaddle() {
        if (rightPressed && paddle.x < canvas.width - paddle.width) {
          paddle.x += paddle.speed;
        }
        if (leftPressed && paddle.x > 0) {
          paddle.x -= paddle.speed;
        }
      }

      // Add initial velocity to ball
      function startBall() {
        if (ball.dx === 0 && ball.dy === -5) {
          ball.dx = (Math.random() * 4 - 2) * ball.speed;
          ball.dy = -ball.speed;
        }
      }

      // Add space key listener to start ball
      document.addEventListener("keydown", (e) => {
        if (e.key === " " && !gameOver) {
          startBall();
        }
      });

      function moveBall() {
        ball.x += ball.dx;
        ball.y += ball.dy;

        // Wall collision
        if (ball.x + ball.radius > canvas.width || ball.x - ball.radius < 0) {
          ball.dx = -ball.dx;
        }
        if (ball.y - ball.radius < 0) {
          ball.dy = -ball.dy;
        }

        // Paddle collision
        if (
          ball.y + ball.radius > paddle.y &&
          ball.x > paddle.x &&
          ball.x < paddle.x + paddle.width
        ) {
          ball.dy = -ball.speed;
          // Add angle based on where the ball hits the paddle
          const hitPoint =
            (ball.x - (paddle.x + paddle.width / 2)) / (paddle.width / 2);
          ball.dx = hitPoint * ball.speed * 1.5;
        }

        // Game over
        if (ball.y + ball.radius > canvas.height) {
          gameOver = true;
        }
      }

      function checkBlockCollision() {
        blocks.forEach((block) => {
          if (
            block.visible &&
            ball.x > block.x &&
            ball.x < block.x + block.width &&
            ball.y > block.y &&
            ball.y < block.y + block.height
          ) {
            block.visible = false;
            ball.dy = -ball.dy;
            score += 100;
            scoreDisplay.textContent = score;
          }
        });
      }

      // Block physics constants
      const BLOCK_REPULSION = 0.5;
      const MIN_DISTANCE = blockWidth + 5;
      const SPAWN_INTERVAL = 8000; // New block every 8 seconds

      // Block collision avoidance
      function avoidBlockCollisions() {
        for (let i = 0; i < blocks.length; i++) {
          for (let j = i + 1; j < blocks.length; j++) {
            if (!blocks[i].visible || !blocks[j].visible) continue;

            const dx = blocks[j].x - blocks[i].x;
            const dy = blocks[j].y - blocks[i].y;
            const distance = Math.sqrt(dx * dx + dy * dy);

            if (distance < MIN_DISTANCE) {
              const angle = Math.atan2(dy, dx);
              const force = (MIN_DISTANCE - distance) * BLOCK_REPULSION;

              const moveX = Math.cos(angle) * force;
              const moveY = Math.sin(angle) * force;

              blocks[j].x += moveX;
              blocks[j].y += moveY;
              blocks[i].x -= moveX;
              blocks[i].y -= moveY;

              // Adjust velocities for more natural movement
              blocks[j].dx += moveX * 0.1;
              blocks[j].dy += moveY * 0.1;
              blocks[i].dx -= moveX * 0.1;
              blocks[i].dy -= moveY * 0.1;
            }
          }
        }
      }

      // Add new blocks periodically
      function addNewBlock() {
        if (gameOver) return;

        const newBlock = {
          x: Math.random() * (canvas.width - blockWidth - 100) + 50,
          y: -blockHeight,
          width: blockWidth,
          height: blockHeight,
          number: Math.floor(Math.random() * 10) + 240,
          visible: true,
          dx: (Math.random() * 1 - 0.5) * 0.5,
          dy: 0.1,
        };

        blocks.push(newBlock);
        setTimeout(addNewBlock, SPAWN_INTERVAL);
      }

      function moveBlocks() {
        blocks.forEach((block) => {
          if (block.visible) {
            block.x += block.dx;
            block.y += block.dy;

            // Bounce off walls
            if (block.x <= 0 || block.x + block.width >= canvas.width) {
              block.dx = -block.dx;
              block.x = Math.max(
                0,
                Math.min(canvas.width - block.width, block.x)
              );
            }

            // Game over if blocks reach bottom
            if (block.y + block.height >= paddle.y) {
              gameOver = true;
            }

            // Apply friction and gravity
            block.dx *= 0.995; // Less friction
            block.dy = Math.min(block.dy + 0.005, 0.5); // Slower gravity
          }
        });
        avoidBlockCollisions();
      }

      function draw() {
        // Clear canvas
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Draw paddle
        ctx.fillStyle = "#FFFFFF";
        ctx.fillRect(paddle.x, paddle.y, paddle.width, paddle.height);

        // Draw ball
        ctx.beginPath();
        ctx.arc(ball.x, ball.y, ball.radius, 0, Math.PI * 2);
        ctx.fillStyle = "#FFFFFF";
        ctx.fill();
        ctx.closePath();

        // Draw blocks
        blocks.forEach((block) => {
          if (block.visible) {
            ctx.fillStyle = "rgba(255, 255, 255, 0.2)";
            ctx.fillRect(block.x, block.y, block.width, block.height);
            ctx.fillStyle = "rgba(255, 255, 255, 0.2)";
            ctx.font = "16px Arial";
            ctx.textAlign = "center";
            ctx.fillText(
              block.number.toString(),
              block.x + block.width / 2,
              block.y + block.height / 2
            );
          }
        });

        if (gameOver) {
          ctx.fillStyle = "rgba(255, 255, 255, 0.2)";
          ctx.font = "48px Arial";
          ctx.textAlign = "center";
          ctx.fillText("GAME OVER", canvas.width / 2, canvas.height / 2);
          return;
        }

        movePaddle();
        moveBall();
        moveBlocks();
        checkBlockCollision();
        requestAnimationFrame(draw);
      }

      // Start game
      initBlocks();
      setTimeout(addNewBlock, SPAWN_INTERVAL); // Start spawning new blocks
      draw();
    </script>
  </body>
</html>
