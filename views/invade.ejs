<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ファイルインベーダー</title>
    <style>
      body {
        margin: 0;
        overflow: hidden;
        background: #000;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
      }
      #gameCanvas {
        border: 2px solid #333;
        margin-top: 20px;
      }
      .game-header {
        width: 800px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        color: white;
      }
      .score {
        font-size: 24px;
      }
      .back-button {
        padding: 8px 16px;
        background: #4caf50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <div class="game-header">
      <div class="score">スコア: <span id="scoreDisplay">0</span></div>
      <a href="/" class="back-button">戻る</a>
    </div>
    <canvas id="gameCanvas" width="800" height="600"></canvas>

    <script>
      const canvas = document.getElementById("gameCanvas");
      const ctx = canvas.getContext("2d");
      const scoreDisplay = document.getElementById("scoreDisplay");

      // Game objects
      const paddle = {
        x: canvas.width / 2 - 50,
        y: canvas.height - 30,
        width: 100,
        height: 10,
        speed: 8,
      };

      const ball = {
        x: canvas.width / 2,
        y: canvas.height - 50,
        radius: 8,
        speed: 5,
        dx: 0,
        dy: -5,
      };

      // File cards as blocks
      let blocks = [];
      const blockRows = 2;
      const blockCols = 5;
      const blockPadding = 10;
      const blockWidth = 120;
      const blockHeight = 80;

      // Initialize blocks with file numbers
      function initBlocks() {
        blocks = [];
        let fileNumber = 240;
        for (let i = 0; i < blockRows; i++) {
          for (let j = 0; j < blockCols; j++) {
            blocks.push({
              x: j * (blockWidth + blockPadding) + 50,
              y: i * (blockHeight + blockPadding) + 50,
              width: blockWidth,
              height: blockHeight,
              number: fileNumber++,
              visible: true,
            });
          }
        }
      }

      // Game state
      let score = 0;
      let gameOver = false;
      let rightPressed = false;
      let leftPressed = false;

      // Event listeners
      document.addEventListener("keydown", (e) => {
        if (e.key === "Right" || e.key === "ArrowRight") rightPressed = true;
        if (e.key === "Left" || e.key === "ArrowLeft") leftPressed = true;
      });

      document.addEventListener("keyup", (e) => {
        if (e.key === "Right" || e.key === "ArrowRight") rightPressed = false;
        if (e.key === "Left" || e.key === "ArrowLeft") leftPressed = false;
      });

      function movePaddle() {
        if (rightPressed && paddle.x < canvas.width - paddle.width) {
          paddle.x += paddle.speed;
        }
        if (leftPressed && paddle.x > 0) {
          paddle.x -= paddle.speed;
        }
      }

      function moveBall() {
        ball.x += ball.dx;
        ball.y += ball.dy;

        // Wall collision
        if (ball.x + ball.radius > canvas.width || ball.x - ball.radius < 0) {
          ball.dx = -ball.dx;
        }
        if (ball.y - ball.radius < 0) {
          ball.dy = -ball.dy;
        }

        // Paddle collision
        if (
          ball.y + ball.radius > paddle.y &&
          ball.x > paddle.x &&
          ball.x < paddle.x + paddle.width
        ) {
          ball.dy = -ball.speed;
          // Add angle based on where the ball hits the paddle
          const hitPoint =
            (ball.x - (paddle.x + paddle.width / 2)) / (paddle.width / 2);
          ball.dx = hitPoint * 5;
        }

        // Game over
        if (ball.y + ball.radius > canvas.height) {
          gameOver = true;
        }
      }

      function checkBlockCollision() {
        blocks.forEach((block) => {
          if (
            block.visible &&
            ball.x > block.x &&
            ball.x < block.x + block.width &&
            ball.y > block.y &&
            ball.y < block.y + block.height
          ) {
            block.visible = false;
            ball.dy = -ball.dy;
            score += 100;
            scoreDisplay.textContent = score;
          }
        });
      }

      function draw() {
        // Clear canvas
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Draw paddle
        ctx.fillStyle = "#0095DD";
        ctx.fillRect(paddle.x, paddle.y, paddle.width, paddle.height);

        // Draw ball
        ctx.beginPath();
        ctx.arc(ball.x, ball.y, ball.radius, 0, Math.PI * 2);
        ctx.fillStyle = "#0095DD";
        ctx.fill();
        ctx.closePath();

        // Draw blocks
        blocks.forEach((block) => {
          if (block.visible) {
            ctx.fillStyle = "#4CAF50";
            ctx.fillRect(block.x, block.y, block.width, block.height);
            ctx.fillStyle = "white";
            ctx.font = "24px Arial";
            ctx.textAlign = "center";
            ctx.fillText(
              block.number.toString(),
              block.x + block.width / 2,
              block.y + block.height / 2
            );
          }
        });

        if (gameOver) {
          ctx.fillStyle = "red";
          ctx.font = "48px Arial";
          ctx.textAlign = "center";
          ctx.fillText("GAME OVER", canvas.width / 2, canvas.height / 2);
          return;
        }

        movePaddle();
        moveBall();
        checkBlockCollision();
        requestAnimationFrame(draw);
      }

      // Start game
      initBlocks();
      draw();
    </script>
  </body>
</html>
