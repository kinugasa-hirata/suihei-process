    async function exportToPDF() {
      // Get the delivery date from the date picker
      let deliveryDate = document.getElementById('deliveryDatePicker').value || '';
      let dateStr = formatDateForFilename(deliveryDate);
      const filename = `水平ノズル検査_${dateStr}`;

      // Show loading indicator
      const loadingEl = createLoadingIndicator();
      document.body.appendChild(loadingEl);

      try {
        // Initialize jsPDF with portrait orientation
        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF({
          orientation: 'portrait', // Portrait orientation
          unit: 'mm',
          format: 'a4',
          compress: true
        });

        // Get table content
        const tableElement = document.querySelector('.table-responsive table');
        if (!tableElement) {
          throw new Error('テーブルが見つかりません');
        }

        // Count rows to determine pages
        const tableRows = tableElement.querySelectorAll('tbody tr');
        const ROWS_PER_PAGE = 20; // Estimate for A4 portrait
        const totalPages = Math.ceil(tableRows.length / ROWS_PER_PAGE);
        
        // Get the header content (reused on each page)
        const headerElement = document.querySelector('.content-section');
        const headerCanvas = await html2canvas(headerElement, {
          scale: 2,
          useCORS: true,
          logging: false,
          backgroundColor: '#ffffff'
        });
        const headerImgData = headerCanvas.toDataURL('image/png');
        
        // Get the table header rows
        const tableHeaderRows = tableElement.querySelectorAll('thead tr');
        const tableHeaderDiv = document.createElement('div');
        const tempHeaderTable = document.createElement('table');
        tempHeaderTable.className = 'table table-bordered';
        
        const tempThead = document.createElement('thead');
        tableHeaderRows.forEach(row => {
          tempThead.appendChild(row.cloneNode(true));
        });
        
        tempHeaderTable.appendChild(tempThead);
        tableHeaderDiv.appendChild(tempHeaderTable);
        
        // Capture table header
        const tableHeaderCanvas = await html2canvas(tableHeaderDiv, {
          scale: 2,
          useCORS: true,
          logging: false,
          backgroundColor: '#ffffff'
        });
        const tableHeaderImgData = tableHeaderCanvas.toDataURL('image/png');
        
        // Process pages
        for (let page = 0; page < totalPages; page++) {
          if (page > 0) {
            pdf.addPage();
          }
          
          // Add header to page
          const pdfWidth = pdf.internal.pageSize.getWidth();
          pdf.addImage(headerImgData, 'PNG', 0, 0, pdfWidth, 40);
          
          // Add table header
          pdf.addImage(tableHeaderImgData, 'PNG', 5, 45, pdfWidth - 10, 40);
          
          // Calculate rows for this page
          const startRow = page * ROWS_PER_PAGE;
          const endRow = Math.min((page + 1) * ROWS_PER_PAGE, tableRows.length);
          
          // Create temporary table with just this page's body rows
          const tempTable = document.createElement('table');
          tempTable.className = 'table table-bordered';
          
          const tempTbody = document.createElement('tbody');
          for (let i = startRow; i < endRow; i++) {
            if (i < tableRows.length) {
              tempTbody.appendChild(tableRows[i].cloneNode(true));
            }
          }
          
          tempTable.appendChild(tempTbody);
          
          const tempDiv = document.createElement('div');
          tempDiv.appendChild(tempTable);
          document.body.appendChild(tempDiv);
          tempDiv.style.position = 'absolute';
          tempDiv.style.left = '-9999px';
          
          // Render this part of the table
          const tableCanvas = await html2canvas(tempDiv, {
            scale: 2,
            useCORS: true,
            logging: false,
            backgroundColor: '#ffffff'
          });
          
          // Remove temporary element
          document.body.removeChild(tempDiv);
          
          // Add table body to PDF
          const tableImgData = tableCanvas.toDataURL('image/png');
          pdf.addImage(tableImgData, 'PNG', 5, 90, pdfWidth - 10, Math.min(180, pdfWidth / (tableCanvas.width / tableCanvas.height)));
          
          // Add footer with page number
          const pdfHeight = pdf.internal.pageSize.getHeight();
          pdf.setFont('Helvetica');
          pdf.setFontSize(10);
          
          // Add footnote 
          pdf.text('＊着脱容易なシールに識別番号を記載し製品裏の底面に貼り付ける。', 10, pdfHeight - 20);
          
          // Add page numbers at bottom
          pdf.text(`出力日: ${new Date().toLocaleDateString('ja-JP')}`, 10, pdfHeight - 10);
          pdf.text(`Page ${page + 1} / ${totalPages}`, pdfWidth - 30, pdfHeight - 10);
        }

        // Save the PDF
        pdf.save(`${filename}.pdf`);
        
      } catch (error) {
        console.error('Error generating PDF:', error);
        alert('PDFの生成中にエラーが発生しました: ' + (error.message || error));
      } finally {
        document.body.removeChild(loadingEl);
      }
    }

    // Helper function to format date for filename
    function formatDateForFilename(dateStr) {
      if (dateStr) {
        const parts = dateStr.split('/');
        if (parts.length === 3) {
          return parts[0] + parts[1].padStart(2, '0') + parts[2].padStart(2, '0');
        }
      }
      const today = new Date();
      return today.getFullYear() +
            String(today.getMonth() + 1).padStart(2, '0') +
            String(today.getDate()).padStart(2, '0');
    }

    // Create a loading indicator while generating PDF
    function createLoadingIndicator() {
      const loadingEl = document.createElement('div');
      loadingEl.style.position = 'fixed';
      loadingEl.style.top = '0';
