<!-- views/summary.ejs - Table-based data summary -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .no-data {
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 2rem;
      }
      .highlight-cell {
        background-color: #fff3cd;
        font-weight: bold;
      }
      .summary-card {
        margin-bottom: 1rem;
      }
      .table-responsive {
        overflow-x: auto;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info active">View Summary</a>
      </div>

      <% if (locals.message) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (locals.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <div class="summary-table">
        <% if (files && files.length > 0) { %>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Total Files</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4"><%= files.length %></h2>
                <p class="text-muted">Files uploaded and processed</p>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Total Weight</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4">
                  <% const totalWeight = files.reduce((sum, file) => { return
                  sum + (file.weight !== null ? parseFloat(file.weight) : 0); },
                  0); %> <%= totalWeight.toFixed(1) %>
                </h2>
                <p class="text-muted">Combined weight of all files (kg)</p>
              </div>
            </div>
          </div>
        </div>

        <h3>Highlighted Data Points</h3>
        <p class="text-muted mb-3">
          This table shows the key data points that were highlighted in each
          file.
        </p>

        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="table-dark">
              <tr>
                <th>Filename</th>
                <th>Weight</th>
                <% if (locals.columnLabels && columnLabels.length > 0) { %> <%
                columnLabels.forEach(label => { %>
                <th><%= label %></th>
                <% }); %> <% } else { %>
                <th>Y Value (-8.19x)</th>
                <th>Y Value (-83.1xx)</th>
                <th>Y Value (-5.01x)</th>
                <th>X Value (-24.06x)</th>
                <th>Z Value (15.91x)</th>
                <th>Tolerance (155.2xx)</th>
                <th>Tolerance (37.5xx)</th>
                <th>Tolerance (8.00x)</th>
                <% } %>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% // Sort files by numeric part of filename (descending) const
              sortedFiles = [...files].sort((a, b) => { const numA =
              parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); const numB =
              parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return numB
              - numA; }); sortedFiles.forEach(file => { %>
              <tr>
                <td><strong><%= file.filename %></strong></td>
                <td>
                  <% if (file.weight !== null) { %> <%=
                  parseFloat(file.weight).toFixed(1) %> kg <% } else { %>
                  <span class="text-muted">Not set</span>
                  <% } %>
                </td>

                <% if (locals.fileData && fileData[file.id]) { %> <%
                locals.dataColumns.forEach(column => { %>
                <td class="highlight-cell">
                  <%= fileData[file.id][column] || 'N/A' %>
                </td>
                <% }); %> <% } else { %>
                <!-- Placeholder cells when we don't have real data yet -->
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <td class="highlight-cell">-</td>
                <% } %>

                <td>
                  <a href="/files/<%= file.id %>" class="btn btn-sm btn-info"
                    >View Data</a
                  >
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <% } else { %>
        <div class="no-data">
          <h3>No Data Available</h3>
          <p class="text-muted">Upload files to see a summary of your data.</p>
          <a href="/" class="btn btn-primary">Go to Upload Page</a>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
