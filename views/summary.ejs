        display: inline-block;
      }

      .date-input {
        border: 1px solid #ccc;
        padding: 2px 5px;
        border-radius: 4px;
      }

      .note {
        margin: 15px 0;
        font-size: 0.9em;
        color: #666;
        padding-left: 5px;
      }

      .note::before {
        content: "※";
