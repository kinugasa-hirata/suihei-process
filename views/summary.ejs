      }

      .content-section {
        background-color: white;
        padding: 1rem;
        margin: 0;
      }

      .header-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px 0;
        padding: 5px 0;
      }

      .company-info {
