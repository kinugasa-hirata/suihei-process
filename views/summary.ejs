      /* Print-specific styles with important flags */
    @media print {
      /* Reset table for print */
      .table {
        border-collapse: collapse !important;
        border: 2px solid #000 !important;
        margin: 0 !important;
        width: 100% !important;
      }
      
      /* Target thead specifically */
      .table thead {
        border-bottom: 2px solid #000 !important;
        display: table-header-group !important;
      }
      
      .table thead tr {
        border-bottom: 1px solid #000 !important;
      }
      
      /* Make first thead row have strong top border */
      .table thead tr:first-child {
        border-top: 2px solid #000 !important;
      }
      
      .table thead tr:first-child td {
        border-top: 2px solid #000 !important;
      }
      
      /* Force all borders to be visible */
      .table tbody, .table thead, .table tr, .table td, .table th {
        border: 1px solid #000 !important;
        page-break-inside: avoid !important;
      }
      
      /* Specifically target the first row of the body */
      .table tbody tr:first-child {
        border-top: 2px solid #000 !important;
      }
      
      .table tbody tr:first-child td {
        border-top: 2px solid #000 !important;
      }
      
      /* Add a box around the table */
      #pdf-container {
        border: none !important;
      }
      
      /* Add a frame around the table container */
      .table-responsive {
        border: 1px solid transparent;
        padding-top: 1px; /* Create space for the top border */
        position: relative;
      }
      
      /* Add extra pseudo-element for top border support */
      .table-responsive::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background-color: #000;
        z-index: 10;
      }
    }
