<!-- views/summary.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 800px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info active">View Summary</a>
      </div>

      <div class="summary-table">
        <% if (locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %> <% if (files && files.length > 0) { %>
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Filename</th>
              <th>DISTANCE (Index 1, X Value)</th>
              <th>Weight</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach(file => { %>
            <tr>
              <td><%= file.filename %></td>
              <td>
                <% if (file.distance_value !== null) { %> <%=
                parseFloat(file.distance_value).toFixed(3) %> <% } else { %>
                <span class="text-muted">No data</span>
                <% } %>
              </td>
              <td>
                <% if (file.weight !== null) { %> <%=
                parseFloat(file.weight).toFixed(1) %> <% } else { %>
                <span class="text-muted">No weight</span>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <div class="alert alert-warning">No data available.</div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
