            const cells = row.querySelectorAll(
              "td:nth-child(6), td:nth-child(7), td:nth-child(14), td:nth-child(15)"
            );
            cells.forEach((cell) => {
              if (
                cell.textContent.trim() === "-" ||
                cell.textContent.trim() === ""
              ) {
                cell.classList.remove("invalid-value");
                cell.textContent = "合";
              }
            });
          });
        });

      /**
       * Enhanced printing function that ensures proper formatting
       */
      function printReport() {
        // Hide URLs and timestamps before printing
        const urlElements = document.querySelectorAll('.url-display, .timestamp');
        urlElements.forEach(el => {
          el.classList.add('no-print');
        });

        // Hide the header row with column labels
        const headerRow = document.querySelector('.table thead tr:last-child');
        if (headerRow) {
          headerRow.classList.add('no-print');
          // Add backup style in case class doesn't work
          headerRow.style.display = 'none';
        }
        
        // Enhanced table border fix
        const tables = document.querySelectorAll('table');
        tables.forEach(table => {
          // Add a temporary wrapper with border to ensure top border is visible
          const wrapper = document.createElement('div');
          wrapper.style.border = '1px solid #000';
          wrapper.style.borderBottom = 'none'; // Remove bottom border from wrapper
          table.parentNode.insertBefore(wrapper, table);
          wrapper.appendChild(table);
          
          // Apply strong border styles directly to table elements
          table.style.borderCollapse = 'collapse';
          table.style.border = '1px solid #000';
          
          // Apply borders to all cells
          const allCells = table.querySelectorAll('th, td');
          allCells.forEach(cell => {
            cell.style.border = '1px solid #000';
          });
          
          // Specifically target thead and first row
          const thead = table.querySelector('thead');
          if (thead) {
            thead.style.borderBottom = '2px solid #000';
            const theadRows = thead.querySelectorAll('tr');
            theadRows.forEach(row => {
              row.style.borderTop = '1px solid #000';
              row.style.borderBottom = '1px solid #000';
            });
          }
          
          // Ensure first body row has top border
          const firstBodyRow = table.querySelector('tbody tr:first-child');
          if (firstBodyRow) {
            firstBodyRow.style.borderTop = '2px solid #000 !important';
            
            // Add extra emphasis to cells in the first row
            const firstRowCells = firstBodyRow.querySelectorAll('td');
            firstRowCells.forEach(cell => {
              cell.style.borderTop = '2px solid #000';
            });
          }
        });
        
        // Apply additional styles to force print rendering
        const style = document.createElement('style');
        style.textContent = `
          @media print {
            table { border-collapse: collapse !important; border: 2px solid #000 !important; }
            table * { border-collapse: collapse !important; }
            thead { border-bottom: 2px solid #000 !important; }
            tbody tr:first-child { border-top: 2px solid #000 !important; }
            th, td { border: 1px solid #000 !important; }
          }
        `;
        document.head.appendChild(style);
        
        // Small delay to ensure styles are applied
        setTimeout(() => {
          window.print();
          
          // Clean up the wrapper and style after printing
          setTimeout(() => {
            tables.forEach(table => {
              if (table.parentNode.tagName.toLowerCase() === 'div' && 
                  table.parentNode.style.border === '1px solid #000') {
                const wrapper = table.parentNode;
                wrapper.parentNode.insertBefore(table, wrapper);
                wrapper.parentNode.removeChild(wrapper);
              }
            });
            document.head.removeChild(style);
          }, 1000);
        }, 300);
      }
    </script>
