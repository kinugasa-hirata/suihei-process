      // PDF Export Function
      function exportToPDF() {
        // Get the delivery date from the date picker
        let deliveryDate = document.getElementById("deliveryDatePicker").value;
        let dateStr;

        if (deliveryDate) {
          // Parse the selected date (format YYYY/MM/DD)
          const parts = deliveryDate.split("/");
          if (parts.length === 3) {
            dateStr = parts[0] + parts[1] + parts[2]; // Convert to YYYYMMDD format
          } else {
            // Fallback to today's date if format is incorrect
            const today = new Date();
            dateStr =
              today.getFullYear() +
              String(today.getMonth() + 1).padStart(2, "0") +
              String(today.getDate()).padStart(2, "0");
          }
        } else {
          // If no date selected, use today's date
          const today = new Date();
          dateStr =
            today.getFullYear() +
            String(today.getMonth() + 1).padStart(2, "0") +
            String(today.getDate()).padStart(2, "0");
        }

        // Generate filename: 水平ノズル検査_YYYYMMDD
        const filename = `水平ノズル検査_${dateStr}`;

        // Show loading indicator
        const loadingEl = document.createElement("div");
        loadingEl.style.position = "fixed";
        loadingEl.style.top = "0";
        loadingEl.style.left = "0";
        loadingEl.style.width = "100%";
        loadingEl.style.height = "100%";
        loadingEl.style.backgroundColor = "rgba(255,255,255,0.8)";
        loadingEl.style.display = "flex";
        loadingEl.style.justifyContent = "center";
        loadingEl.style.alignItems = "center";
        loadingEl.style.zIndex = "9999";
        loadingEl.innerHTML =
          '<div style="background-color: #fff; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.2);">PDFを生成中です。お待ちください...</div>';
        document.body.appendChild(loadingEl);

        // Get the content element to convert
        const content = document.getElementById("pdf-container");

        // Temporarily hide any "no-print" elements to ensure they don't appear in the PDF
        const noPrintElements = content.querySelectorAll(".no-print");
        noPrintElements.forEach((el) => {
          el.style.display = "none";
        });

        // Define PDF options - A4 landscape
        const pdfOptions = {
          orientation: "landscape",
          unit: "mm",
          format: "a4",
          compress: true,
        };

        // Initialize jsPDF
        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF(pdfOptions);

        // Function to handle multi-page generation
        function generatePDF() {
          // Get table element which might be long
          const tableElement = content.querySelector(".table-responsive table");
          const headerElement = content.querySelector(".content-section");
          const footerElement = content.querySelector(".bottom-note");

          // If no table found, fall back to capturing the entire content
          if (!tableElement) {
            html2canvas(content, {
              scale: 2,
              useCORS: true,
              logging: false,
              backgroundColor: "#ffffff",
            })
              .then((canvas) => {
                const imgData = canvas.toDataURL("image/png");
                const pageWidth = pdf.internal.pageSize.getWidth();
                const ratio = canvas.width / canvas.height;
                const imgWidth = pageWidth;
                const imgHeight = imgWidth / ratio;

                pdf.addImage(imgData, "PNG", 0, 0, imgWidth, imgHeight);
                pdf.save(`${filename}.pdf`);

                // Restore display of no-print elements
                noPrintElements.forEach((el) => {
                  el.style.display = "";
                });

                document.body.removeChild(loadingEl);
              })
              .catch(handleError);
            return;
          }

          // First, render the header
          html2canvas(headerElement, {
            scale: 2,
            useCORS: true,
            backgroundColor: "#ffffff",
          })
            .then((headerCanvas) => {
              const headerImgData = headerCanvas.toDataURL("image/png");
              const pageWidth = pdf.internal.pageSize.getWidth();
              const pageHeight = pdf.internal.pageSize.getHeight();
              const headerRatio = headerCanvas.width / headerCanvas.height;
              const headerImgWidth = pageWidth;
              const headerImgHeight = headerImgWidth / headerRatio;

              // Add header to first page
              pdf.addImage(
                headerImgData,
                "PNG",
                0,
                0,
                headerImgWidth,
                headerImgHeight
              );
              let yOffset = headerImgHeight;

              // Get table rows for pagination
              const rows = Array.from(
                tableElement.querySelectorAll("tbody tr")
              );
              const headerRows = Array.from(
                tableElement.querySelectorAll("thead tr")
              );

              // Create a temporary table for rendering
              const tempTable = document.createElement("table");
              tempTable.className = "table table-bordered table-hover";
              tempTable.style.width = "100%";

              // Add table header
              const thead = document.createElement("thead");
              headerRows.forEach((row) => {
                thead.appendChild(row.cloneNode(true));
              });
              tempTable.appendChild(thead);

              // Create tbody for content
              const tbody = document.createElement("tbody");
              tempTable.appendChild(tbody);

              // Maximum rows per page (adjust as needed)
              const maxRowsPerPage = 20;
              let currentPage = 1;

              // Process rows in batches
              function processRowBatch(startIndex) {
                // Clear previous rows
                tbody.innerHTML = "";

                // Add rows for current page
                const endIndex = Math.min(
                  startIndex + maxRowsPerPage,
                  rows.length
                );
                for (let i = startIndex; i < endIndex; i++) {
                  tbody.appendChild(rows[i].cloneNode(true));
                }

                // Create a temporary container
                const tempContainer = document.createElement("div");
                tempContainer.appendChild(tempTable);
                document.body.appendChild(tempContainer);
                tempContainer.style.position = "absolute";
                tempContainer.style.left = "-9999px";

                // Render the table chunk
                html2canvas(tempContainer, {
                  scale: 2,
                  useCORS: true,
                  backgroundColor: "#ffffff",
                })
                  .then((tableCanvas) => {
                    // Remove temp container
                    document.body.removeChild(tempContainer);

                    const tableImgData = tableCanvas.toDataURL("image/png");
                    const tableRatio = tableCanvas.width / tableCanvas.height;
                    const tableImgWidth = pageWidth;
                    const tableImgHeight = tableImgWidth / tableRatio;

                    // If not the first page, add a new page
                    if (currentPage > 1) {
                      pdf.addPage();
                      // Add header to new page
                      pdf.addImage(
                        headerImgData,
                        "PNG",
                        0,
                        0,
                        headerImgWidth,
                        headerImgHeight
                      );
                      yOffset = headerImgHeight;
                    }

                    // Add table chunk to current page
                    pdf.addImage(
                      tableImgData,
                      "PNG",
                      0,
                      yOffset,
                      tableImgWidth,
                      tableImgHeight
                    );

                    // Move to next batch or finish
                    if (endIndex < rows.length) {
                      currentPage++;
                      processRowBatch(endIndex);
                    } else {
                      // Add footer to the last page if needed
                      if (footerElement) {
                        html2canvas(footerElement, {
                          scale: 2,
                          useCORS: true,
                          backgroundColor: "#ffffff",
                        })
                          .then((footerCanvas) => {
                            const footerImgData =
                              footerCanvas.toDataURL("image/png");
                            const footerRatio =
                              footerCanvas.width / footerCanvas.height;
                            const footerImgWidth = pageWidth;
                            const footerImgHeight =
                              footerImgWidth / footerRatio;

                            pdf.addImage(
                              footerImgData,
                              "PNG",
                              0,
                              yOffset + tableImgHeight,
                              footerImgWidth,
                              footerImgHeight
                            );
                            finalizePDF();
                          })
                          .catch(handleError);
                      } else {
                        finalizePDF();
                      }
                    }
                  })
                  .catch(handleError);
              }

              // Start processing with the first batch
              processRowBatch(0);

              function finalizePDF() {
                // Save PDF
                pdf.save(`${filename}.pdf`);

                // Restore display of no-print elements
                noPrintElements.forEach((el) => {
                  el.style.display = "";
                });

                // Remove loading indicator
                document.body.removeChild(loadingEl);
              }
            })
            .catch(handleError);
        }

        function handleError(error) {
          console.error("PDF generation error:", error);
          alert("PDFの生成中にエラーが発生しました。");

          // Restore display of no-print elements
          noPrintElements.forEach((el) => {
            el.style.display = "";
          });

          document.body.removeChild(loadingEl);
        }

        // Start PDF generation
        generatePDF();
      }
    </script>
  </body>
