<!-- views/summary.ejs - Updated with coordinate-based data -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .no-data {
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 2rem;
      }
      .highlight-cell {
        background-color: #fff3cd;
        font-weight: bold;
      }
      .summary-card {
        margin-bottom: 1rem;
      }
      .table-responsive {
        overflow-x: auto;
      }
      .file-filter-form {
        background-color: #e9ecef;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .file-range-inputs {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      .file-range-inputs .form-control {
        width: 100px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info active">View Summary</a>
      </div>

      <!-- File range selection form -->
      <div class="file-filter-form">
        <h5>Filter Files</h5>
        <form action="/summary" method="get">
          <div class="file-range-inputs mb-2">
            <div>
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control"
                id="minFile"
                name="minFile"
                value="<%= typeof minFile != 'undefined' ? minFile : '' %>"
                placeholder="e.g., 240"
              />
            </div>
            <div>
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control"
                id="maxFile"
                name="maxFile"
                value="<%= typeof maxFile != 'undefined' ? maxFile : '' %>"
                placeholder="e.g., 250"
              />
            </div>
            <div>
              <button type="submit" class="btn btn-primary">
                Apply Filter
              </button>
              <a href="/summary" class="btn btn-outline-secondary ms-2"
                >Reset</a
              >
            </div>
          </div>
          <div class="form-text">Enter file numbers to filter the report.</div>
        </form>
      </div>

      <% if (typeof message != 'undefined' && message) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (typeof error != 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <div class="summary-table">
        <% if (typeof files != 'undefined' && files && files.length > 0) { %>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Total Files</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4"><%= files.length %></h2>
                <p class="text-muted">Files in this report</p>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Total Weight</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4">
                  <% var totalWeight = 0; for (var i = 0; i < files.length; i++)
                  { var file = files[i]; totalWeight += (file.weight != null ?
                  parseFloat(file.weight) : 0); } %> <%= totalWeight.toFixed(1)
                  %>
                </h2>
                <p class="text-muted">Combined weight of all files (kg)</p>
              </div>
            </div>
          </div>
        </div>

        <h3>Highlighted Data Points</h3>
        <p class="text-muted mb-3">
          Data extracted from specific coordinates in each file [row, column].
        </p>

        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="table-dark">
              <tr>
                <th>Filename</th>
                <th>Weight</th>
                <% if (typeof columnLabels != 'undefined' && columnLabels &&
                columnLabels.length > 0) { %> <% for (var i = 0; i <
                columnLabels.length; i++) { %>
                <th><%= columnLabels[i] %></th>
                <% } %> <% } %>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% // Files are already sorted from the backend for (var i = 0; i
              < files.length; i++) { var file = files[i]; %>
              <tr>
                <td><strong><%= file.filename %></strong></td>
                <td>
                  <% if (file.weight != null) { %> <%=
                  parseFloat(file.weight).toFixed(1) %> kg <% } else { %>
                  <span class="text-muted">Not set</span>
                  <% } %>
                </td>

                <% if (typeof fileData != 'undefined' && fileData &&
                fileData[file.id]) { %> <% if (typeof dataColumns != 'undefined'
                && dataColumns) { %> <% for (var j = 0; j < dataColumns.length;
                j++) { %> <% var column = dataColumns[j]; %>
                <td class="highlight-cell">
                  <%= fileData[file.id][column] || 'N/A' %>
                </td>
                <% } %> <% } %> <% } %>

                <td>
                  <a href="/files/<%= file.id %>" class="btn btn-sm btn-info"
                    >View Data</a
                  >
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <% } else { %>
        <div class="no-data">
          <h3>No Data Available</h3>
          <p class="text-muted">No files match your current filter criteria.</p>
          <a href="/" class="btn btn-primary">Go to Upload Page</a>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
