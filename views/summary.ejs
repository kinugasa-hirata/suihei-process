    <script>
      // Initialize Flatpickr
      flatpickr("#deliveryDatePicker", {
        dateFormat: "Y/m/d",
        locale: "ja",
        allowInput: true,
      });

      // Quick approve button logic
      document
        .getElementById("quickApproveButton")
        .addEventListener("click", function () {
          const rows = document.querySelectorAll("tbody tr");
          rows.forEach((row) => {
            // Specifically target only the E, F, M, N columns (columns 5, 6, 14, 15)
            const cells = row.querySelectorAll(
              "td:nth-child(6), td:nth-child(7), td:nth-child(14), td:nth-child(15)"
            );
            cells.forEach((cell) => {
              if (
                cell.textContent.trim() === "-" ||
                cell.textContent.trim() === ""
              ) {
                cell.classList.remove("invalid-value");
                cell.textContent = "合";
              }
            });
          });
        });

      /**
       * Enhanced printing function that ensures proper formatting
       */
      function printReport() {
        // Hide URLs and timestamps before printing
        const urlElements = document.querySelectorAll('.url-display, .timestamp');
        urlElements.forEach(el => {
          el.classList.add('no-print');
        });

              // Hide the header row with column labels
        const headerRow = document.querySelector('.table thead tr:last-child');
        if (headerRow) {
          headerRow.classList.add('no-print');
          // Add backup style in case class doesn't work
          headerRow.style.display = 'none';
        }
        
        // Fix table borders
        const tables = document.querySelectorAll('table');
        tables.forEach(table => {
          // Add border styles for consistent appearance
          table.style.borderCollapse = 'collapse';
          table.style.border = '1px solid #000';
          
          // Ensure top border is present
          const firstRow = table.querySelector('tbody tr:first-child');
