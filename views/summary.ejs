    <script>
      // Initialize date picker and set up button handlers
      document.addEventListener("DOMContentLoaded", function () {
        // Initialize date picker
        if (typeof flatpickr !== "undefined") {
          flatpickr("#deliveryDatePicker", {
            dateFormat: "Y/m/d",
            locale: "ja",
            allowInput: true,
          });
        }

        // Quick approve button handler
        var quickApproveButton = document.getElementById("quickApproveButton");
        if (quickApproveButton) {
          quickApproveButton.addEventListener("click", function () {
            var rows = document.querySelectorAll("tbody tr");
            for (var i = 0; i < rows.length; i++) {
              var row = rows[i];
              var cellIndexes = [5, 6, 13, 14]; // E, F, M, N columns

              for (var j = 0; j < cellIndexes.length; j++) {
                var cellIndex = cellIndexes[j];
                if (row.cells && row.cells.length > cellIndex) {
                  var cell = row.cells[cellIndex];
                  if (
                    cell.textContent.trim() === "-" ||
                    cell.textContent.trim() === ""
                  ) {
                    cell.classList.remove("invalid-value");
                    cell.textContent = "合";
                  }
                }
              }
            }
          });
        }

        // PDF export button handler
        var pdfButton = document.querySelector(".button-pdf");
        if (pdfButton) {
          pdfButton.addEventListener("click", function () {
            generatePDF();
          });
        }
      });

      // PDF generation function
      function generatePDF() {
        // Create loading indicator
        var loadingEl = document.createElement("div");
        loadingEl.style.position = "fixed";
        loadingEl.style.top = "0";
        loadingEl.style.left = "0";
        loadingEl.style.width = "100%";
        loadingEl.style.height = "100%";
        loadingEl.style.backgroundColor = "rgba(255,255,255,0.8)";
        loadingEl.style.display = "flex";
        loadingEl.style.justifyContent = "center";
        loadingEl.style.alignItems = "center";
        loadingEl.style.zIndex = "9999";
        loadingEl.innerHTML =
          '<div style="background-color: #fff; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.2);">PDFを生成中です。お待ちください...</div>';
        document.body.appendChild(loadingEl);

        try {
          // Get date for filename
          var today = new Date();
          var dateStr =
            today.getFullYear() +
            String(today.getMonth() + 1).padStart(2, "0") +
            String(today.getDate()).padStart(2, "0");

          // Create filename
          var filename = "水平ノズル検査_" + dateStr;

          // Get content and hide non-printable elements
          var content = document.getElementById("pdf-container");
          var noPrintElements = document.querySelectorAll(".no-print");

          for (var i = 0; i < noPrintElements.length; i++) {
            noPrintElements[i].style.display = "none";
          }

          // Use html2canvas to render PDF
          html2canvas(content, {
            scale: 2,
            useCORS: true,
            logging: false,
            backgroundColor: "#ffffff",
          })
            .then(function (canvas) {
              var imgData = canvas.toDataURL("image/png");

              var { jsPDF } = window.jspdf;
              var pdf = new jsPDF("landscape", "mm", "a4");

              var pageWidth = pdf.internal.pageSize.getWidth();
              var imgWidth = pageWidth - 20;
              var imgHeight = (canvas.height * imgWidth) / canvas.width;

              pdf.addImage(imgData, "PNG", 10, 10, imgWidth, imgHeight);
              pdf.save(filename + ".pdf");

              // Restore visibility of elements
              for (var i = 0; i < noPrintElements.length; i++) {
                noPrintElements[i].style.display = "";
              }

              document.body.removeChild(loadingEl);
            })
            .catch(function (error) {
              console.error("PDF generation error:", error);
              alert("PDFの生成中にエラーが発生しました: " + error.message);

              // Restore visibility of elements
              for (var i = 0; i < noPrintElements.length; i++) {
                noPrintElements[i].style.display = "";
              }

              document.body.removeChild(loadingEl);
            });
        } catch (error) {
          console.error("Error initializing PDF:", error);
          alert("PDFの初期化中にエラーが発生しました: " + error.message);
          document.body.removeChild(loadingEl);
        }
      }
    </script>
