<!-- Simplified views/summary.ejs to fix server errors -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .no-data {
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 2rem;
      }
      .highlight-cell {
        background-color: #fff3cd;
        font-weight: bold;
      }
      .table-responsive {
        overflow-x: auto;
      }
      .file-filter-form {
        background-color: #e9ecef;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .form-range-group {
        display: flex;
        gap: 1rem;
        align-items: end;
      }
      .range-input {
        width: 120px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info active">View Summary</a>
      </div>

      <!-- File range selection form -->
      <div class="file-filter-form">
        <h5>Filter Files</h5>
        <form action="/summary" method="get">
          <div class="form-range-group mb-2">
            <div>
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="minFile"
                name="minFile"
                value="<%= typeof minFile != 'undefined' ? minFile : '' %>"
                placeholder="e.g., 240"
              />
            </div>
            <div>
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="maxFile"
                name="maxFile"
                value="<%= typeof maxFile != 'undefined' ? maxFile : '' %>"
                placeholder="e.g., 250"
              />
            </div>
            <div>
              <button type="submit" class="btn btn-primary">
                Apply Filter
              </button>
              <a href="/summary" class="btn btn-outline-secondary ms-2"
                >Reset</a
              >
            </div>
          </div>
          <div class="form-text">Enter file numbers to filter the report.</div>
        </form>
      </div>

      <div class="summary-table">
        <% if (typeof files != 'undefined' && files && files.length > 0) { %>
        <h3>Highlighted Data Points</h3>
        <p class="text-muted mb-3">
          Data from specific coordinates in each file.
        </p>

        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="table-dark">
              <tr>
                <th>Filename</th>
                <% var headers = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i',
                'j', 'k', 'm', 'n']; %> <% headers.forEach(function(header) { %>
                <th><%= header %></th>
                <% }); %>
                <th>Weight (g)</th>
              </tr>
            </thead>
            <tbody>
              <% files.forEach(function(file) { %>
              <tr>
                <td><strong><%= file.filename %></strong></td>
                <% headers.forEach(function(header) { %>
                <td class="highlight-cell">
                  <%= (fileData && fileData[file.id] &&
                  fileData[file.id][header]) ? fileData[file.id][header] : '-'
                  %>
                </td>
                <% }); %>
                <td>
                  <% if (file.weight) { %> <%= (parseFloat(file.weight) *
                  1000).toFixed(1) %> <% } else { %>
                  <span class="text-muted">Not set</span>
                  <% } %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <% } else { %>
        <div class="no-data">
          <h3>No Data Available</h3>
          <p class="text-muted">No files match your current filter criteria.</p>
          <a href="/" class="btn btn-primary">Go to Upload Page</a>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
