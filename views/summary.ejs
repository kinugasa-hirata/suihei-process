<!-- views/summary.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 800px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .no-data {
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 2rem;
      }
      .summary-card {
        margin-bottom: 1rem;
      }
      .print-button {
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info active">View Summary</a>
      </div>

      <div class="summary-table">
        <% if (locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %> <% if (files && files.length > 0) { %>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Total Files</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4"><%= files.length %></h2>
                <p class="text-muted">Files uploaded and processed</p>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card summary-card">
              <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Total Weight</h5>
              </div>
              <div class="card-body">
                <h2 class="display-4">
                  <% const totalWeight = files.reduce((sum, file) => { return
                  sum + (file.weight !== null ? parseFloat(file.weight) : 0); },
                  0); %> <%= totalWeight.toFixed(1) %>
                </h2>
                <p class="text-muted">Combined weight of all files (kg)</p>
              </div>
            </div>
          </div>
        </div>

        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Filename</th>
              <th>DISTANCE (Index 1, X Value)</th>
              <th>Weight</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach(file => { %>
            <tr>
              <td><%= file.filename %></td>
              <td>
                <% if (file.distance_value !== null) { %> <%=
                parseFloat(file.distance_value).toFixed(3) %> <% } else { %>
                <span class="text-muted">No data</span>
                <% } %>
              </td>
              <td>
                <% if (file.weight !== null) { %> <%=
                parseFloat(file.weight).toFixed(1) %> <% } else { %>
                <span class="text-muted">No weight</span>
                <% } %>
              </td>
              <td>
                <a href="/files/<%= file.id %>" class="btn btn-sm btn-info"
                  >View Data</a
                >
                <a
                  href="/template/<%= file.id %>"
                  class="btn btn-sm btn-success"
                  >Print Report</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <div class="print-button text-center">
          <button onclick="window.print();" class="btn btn-primary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-printer"
              viewBox="0 0 16 16"
            >
              <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
              <path
                d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z"
              />
            </svg>
            Print Summary
          </button>
        </div>

        <% } else { %>
        <div class="no-data">
          <h3>No Data Available</h3>
          <p class="text-muted">Upload files to see a summary of your data.</p>
          <a href="/" class="btn btn-primary">Go to Upload Page</a>
        </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
