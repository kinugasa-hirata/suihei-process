<!-- Fixed views/summary.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Summary</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .summary-table {
        margin-top: 2rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .no-data {
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 2rem;
      }
      .highlight-cell {
        background-color: #fff3cd;
        font-weight: bold;
      }
      .table-responsive {
        overflow-x: auto;
      }
      .file-filter-form {
        background-color: #e9ecef;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .form-range-group {
        display: flex;
        gap: 1rem;
        align-items: end;
      }
      .range-input {
        width: 120px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Data Summary</h1>
      <div class="nav-links mb-4">
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <!-- File range filter form -->
      <div class="file-filter-form">
        <form action="/summary" method="get">
          <div class="row">
            <div class="col-md-4">
              <label for="minFile" class="form-label"
                >Minimum File Number</label
              >
              <input
                type="number"
                class="form-control"
                id="minFile"
                name="minFile"
                value="<%= typeof minFile !== 'undefined' ? minFile : '' %>"
                placeholder="Enter min file number"
              />
            </div>
            <div class="col-md-4">
              <label for="maxFile" class="form-label"
                >Maximum File Number</label
              >
              <input
                type="number"
                class="form-control"
                id="maxFile"
                name="maxFile"
                value="<%= typeof maxFile !== 'undefined' ? maxFile : '' %>"
                placeholder="Enter max file number"
              />
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-primary">
                Apply Filter
              </button>
            </div>
          </div>
        </form>
      </div>

      <% if (typeof files !== 'undefined' && files && files.length > 0) { %>
      <!-- Summary table -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Filename</th>
              <% var headers = [ 'A', 'B', 'C', 'D', // First 4 numbers 'E',
              'F', // Two blanks 'G', 'H', // Two G values 'I', 'J', 'K', 'L',
              // Four more values 'M', 'N' // Two final blanks ]; %> <%
              headers.forEach(function(header) { %>
              <th><%= header %></th>
              <% }); %>
              <th>質量 (g)</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach(function(file) { %>
            <tr>
              <td>
                <a href="/files/<%= file.id %>" target="_blank">
                  <strong><%= file.filename %></strong>
                </a>
              </td>
              <% headers.forEach(function(header) { %>
              <td class="highlight-cell">
                <%= (typeof fileData !== 'undefined' && fileData &&
                fileData[file.id] && typeof fileData[file.id][header] !==
                'undefined') ? fileData[file.id][header] : '-' %>
              </td>
              <% }); %>
              <td>
                <% if (file.weight) { %> <%= (parseFloat(file.weight) *
                1000).toFixed(1) %> <% } else { %>
                <span class="text-muted">Not set</span>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% } else { %>
      <div class="no-data">
        <h3>No Data Available</h3>
        <p class="text-muted">No files match your current filter criteria.</p>
        <a href="/" class="btn btn-primary">Go to Upload Page</a>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
