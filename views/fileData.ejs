<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Viewer</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1000px;
        margin-top: 2rem;
      }
      .table-responsive {
        margin-top: 1rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .file-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .data-type-badge {
        font-size: 0.8rem;
        padding: 0.3rem 0.5rem;
        margin-right: 0.5rem;
        border-radius: 4px;
      }
      .badge-CIRCLE {
        background-color: #d4edda;
        color: #155724;
      }
      .badge-PLANE {
        background-color: #cce5ff;
        color: #004085;
      }
      .badge-DISTANCE {
        background-color: #fff3cd;
        color: #856404;
      }
      .badge-PT-COMP {
        background-color: #f8d7da;
        color: #721c24;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">File Data Viewer</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <div class="file-info">
        <% if (locals.file) { %>
        <h2><%= file.filename %></h2>
        <div class="row">
          <div class="col-md-8">
            <p>
              <strong>Uploaded:</strong> <%= new
              Date(file.uploaded_at).toLocaleString() %>
            </p>
          </div>
          <div class="col-md-4">
            <% if (file.weight !== null) { %>
            <p>
              <strong>Weight:</strong> <%= parseFloat(file.weight).toFixed(1) %>
            </p>
            <form action="/update-weight" method="post" class="d-inline">
              <div class="input-group input-group-sm">
                <input type="hidden" name="fileId" value="<%= file.id %>" />
                <input
                  type="number"
                  class="form-control"
                  name="weight"
                  step="0.1"
                  value="<%= parseFloat(file.weight).toFixed(1) %>"
                />
                <button type="submit" class="btn btn-primary btn-sm">
                  Update
                </button>
              </div>
            </form>
            <% } else { %>
            <form action="/update-weight" method="post" class="d-inline">
              <div class="input-group input-group-sm">
                <input type="hidden" name="fileId" value="<%= file.id %>" />
                <input
                  type="number"
                  class="form-control"
                  name="weight"
                  step="0.1"
                  value=""
                  placeholder="Set weight"
                />
                <button type="submit" class="btn btn-primary btn-sm">
                  Save
                </button>
              </div>
            </form>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>

      <% if (locals.message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %> <% if (locals.data && data.length > 0) { %>
      <h3>Data Points (<%= data.length %>)</h3>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Index</th>
              <th>Type</th>
              <th>X</th>
              <th>Y</th>
              <th>Z</th>
              <th>Rot X</th>
              <th>Rot Y</th>
              <th>Rot Z</th>
              <th>Note</th>
              <th>Diameter</th>
              <th>Tolerance</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(item => { %>
            <tr>
              <td><%= item.index %></td>
              <td>
                <span class="data-type-badge badge-<%= item.data_type %>">
                  <%= item.data_type %>
                </span>
              </td>
              <td><%= item.x !== null ? item.x.toFixed(3) : '' %></td>
              <td><%= item.y !== null ? item.y.toFixed(3) : '' %></td>
              <td><%= item.z !== null ? item.z.toFixed(3) : '' %></td>
              <td><%= item.rot_x !== null ? item.rot_x.toFixed(3) : '' %></td>
              <td><%= item.rot_y !== null ? item.rot_y.toFixed(3) : '' %></td>
              <td><%= item.rot_z !== null ? item.rot_z.toFixed(3) : '' %></td>
              <td><%= item.note %></td>
              <td>
                <%= item.diameter !== null ? item.diameter.toFixed(3) : '' %>
              </td>
              <td>
                <%= item.tolerance !== null ? item.tolerance.toFixed(3) : '' %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-warning">No data available for this file.</div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
