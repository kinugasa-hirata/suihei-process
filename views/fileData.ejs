<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Viewer</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1400px;
        margin-top: 2rem;
      }
      .file-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .table-responsive {
        overflow-x: auto;
      }
      /* Highlight style */
      .highlight {
        background-color: #fff3cd !important;
        border: 2px solid #fd7e14 !important;
        font-weight: bold;
      }
      .data-type-CIRCLE {
        color: #198754;
        font-weight: bold;
      }
      .data-type-PLANE {
        color: #0d6efd;
        font-weight: bold;
      }
      .data-type-DISTANCE {
        color: #ffc107;
        font-weight: bold;
      }
      .data-type-PT-COMP {
        color: #dc3545;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">File Data Viewer</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <% if (typeof file !== 'undefined' && file) { %>
      <div class="file-info">
        <h2><%= file.filename %></h2>
        <div class="row">
          <div class="col-md-6">
            <p><strong>File ID:</strong> <%= file.id %></p>
            <p>
              <strong>Uploaded:</strong> <%= new
              Date(file.uploaded_at).toLocaleString() %>
            </p>
          </div>
          <div class="col-md-6">
            <p>
              <% if (typeof file.weight !== 'undefined' && file.weight !== null)
              { %>
              <strong>Weight:</strong> <%= file.weight %> <% } else { %>
              <strong>Weight:</strong> <span class="text-muted">Not set</span>
              <% } %>
            </p>

            <form action="/update-weight" method="post">
              <div class="input-group" style="max-width: 300px">
                <input type="hidden" name="fileId" value="<%= file.id %>" />
                <input
                  type="number"
                  class="form-control"
                  name="weight"
                  step="0.1"
                  value="<%= file.weight !== null ? file.weight : '' %>"
                  placeholder="Enter weight"
                />
                <button type="submit" class="btn btn-primary">
                  Update Weight
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } %> <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %> <% if (typeof data !== 'undefined' && data && data.length > 0) {
      %>
      <h3>Data Points (<%= data.length %>)</h3>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" id="dataTable">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Index</th>
              <th>Type</th>
              <th>X</th>
              <th>Y</th>
              <th>Z</th>
              <th>Rot X</th>
              <th>Rot Y</th>
              <th>Rot Z</th>
              <th>Note</th>
              <th>Diameter</th>
              <th>Tolerance</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(point, rowIndex) { %>
            <tr data-index="<%= rowIndex %>">
              <td><%= point.id %></td>
              <td><%= point.index %></td>
              <td class="data-type-<%= point.data_type %>">
                <%= point.data_type %>
              </td>
              <td>
                <% if(point.x !== null && point.x !== undefined) { %> <%= typeof
                point.x === 'number' ? point.x.toFixed(3) : ((point.x === 'NaN'
                || point.x === 'NAN') ? 'NaN' : (parseFloat(point.x) ?
                parseFloat(point.x).toFixed(3) : point.x)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.y !== null && point.y !== undefined) { %> <%= typeof
                point.y === 'number' ? point.y.toFixed(3) : ((point.y === 'NaN'
                || point.y === 'NAN') ? 'NaN' : (parseFloat(point.y) ?
                parseFloat(point.y).toFixed(3) : point.y)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.z !== null && point.z !== undefined) { %> <%= typeof
                point.z === 'number' ? point.z.toFixed(3) : ((point.z === 'NaN'
                || point.z === 'NAN') ? 'NaN' : (parseFloat(point.z) ?
                parseFloat(point.z).toFixed(3) : point.z)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.rot_x !== null && point.rot_x !== undefined) { %>
                <%= typeof point.rot_x === 'number' ? point.rot_x.toFixed(3) :
                ((point.rot_x === 'NaN' || point.rot_x === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_x) ? parseFloat(point.rot_x).toFixed(3) :
                point.rot_x)) %> <% } else { %> - <% } %>
              </td>
              <td>
                <% if(point.rot_y !== null && point.rot_y !== undefined) { %>
                <%= typeof point.rot_y === 'number' ? point.rot_y.toFixed(3) :
                ((point.rot_y === 'NaN' || point.rot_y === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_y) ? parseFloat(point.rot_y).toFixed(3) :
                point.rot_y)) %> <% } else { %> - <% } %>
              </td>
              <td>
                <% if(point.rot_z !== null && point.rot_z !== undefined) { %>
                <%= typeof point.rot_z === 'number' ? point.rot_z.toFixed(3) :
                ((point.rot_z === 'NaN' || point.rot_z === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_z) ? parseFloat(point.rot_z).toFixed(3) :
                point.rot_z)) %> <% } else { %> - <% } %>
              </td>
              <td><%= point.note || '-' %></td>
              <td>
                <% if(point.diameter !== null && point.diameter !== undefined) {
                %> <%= typeof point.diameter === 'number' ?
                point.diameter.toFixed(3) : ((point.diameter === 'NaN' ||
                point.diameter === 'NAN') ? 'NaN' : (parseFloat(point.diameter)
                ? parseFloat(point.diameter).toFixed(3) : point.diameter)) %> <%
                } else { %> - <% } %>
              </td>
              <td>
                <% if(point.tolerance !== null && point.tolerance !== undefined)
                { %> <%= typeof point.tolerance === 'number' ?
                point.tolerance.toFixed(3) : ((point.tolerance === 'NaN' ||
                point.tolerance === 'NAN') ? 'NaN' :
                (parseFloat(point.tolerance) ?
                parseFloat(point.tolerance).toFixed(3) : point.tolerance)) %> <%
                } else { %> - <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Data Type Summary -->
      <div class="mt-4">
        <h4>Data Type Summary</h4>
        <% const typeCounts = {}; data.forEach(function(point) {
        typeCounts[point.data_type] = (typeCounts[point.data_type] || 0) + 1;
        }); %>

        <div class="row">
          <% Object.entries(typeCounts).forEach(function([type, count]) { %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title data-type-<%= type %>"><%= type %></h5>
                <p class="card-text">
                  Count: <%= count %> (<%= Math.round((count / data.length) *
                  100) %>%)
                </p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>

      <% } else { %>
      <div class="alert alert-warning">
        <p>No data found for this file.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Highlight specific cells by their position in the table
        // Format: [rowIndex, columnIndex]
        // Note: row is 0-based from top, column is 0-based from left
        const cellsToHighlight = [
          // Y column cells (rowIndex, 4)
          [2, 4], // PT-COMP row 1, Y column (-8.196)
          [4, 4], // PT-COMP row 2, Y column (-83.153)
          [6, 4], // DISTANCE row 2, Y column (-5.010)
          [9, 4], // PT-COMP row 4, Y column (-24.068)

          // Z column cells (rowIndex, 5)
          [13, 5], // PT-COMP row 6, Z column (15.911)

          // Tolerance column cells (rowIndex, 11)
          [15, 11], // CIRCLE row 7, Tolerance column (155.194)
          [23, 11], // CIRCLE row 9, Tolerance column (37.500)
          [24, 11], // CIRCLE row 10, Tolerance column (8.006)
          [25, 11], // CIRCLE row 11, Tolerance column (7.997)
          [26, 11], // CIRCLE row 12, Tolerance column (8.003)
          [27, 11], // CIRCLE row 13, Tolerance column (8.008)
          [28, 11], // CIRCLE row 14, Tolerance column (122.197)
          [29, 11], // CIRCLE row 15, Tolerance column (29.974)
        ];

        // Loop through all rows and add highlight class
        const table = document.getElementById("dataTable");
        const rows = table.querySelectorAll("tbody tr");

        cellsToHighlight.forEach(([rowIdx, colIdx]) => {
          // Make sure row exists
          if (rows[rowIdx]) {
            const cell = rows[rowIdx].cells[colIdx];
            if (cell) {
              cell.classList.add("highlight");
            }
          }
        });

        // Alternative method: match specific cells by ID + column
        const idToHighlight = {
          // Map ID to column indices that should be highlighted
          37: [4], // ID 37, highlight Y column (PT-COMP row 1)
          42: [4], // ID 42, highlight Y column (PT-COMP row 2)
          48: [4], // ID 48, highlight Y column (DISTANCE row 2)
          44: [4], // ID 44, highlight Y column (PT-COMP row 4)
          50: [5], // ID 50, highlight Z column (PT-COMP row 6)
          34: [11], // ID 34, highlight Tolerance column (CIRCLE row 7)
          36: [11], // ID 36, highlight Tolerance column (CIRCLE row 9)
          38: [11], // ID 38, highlight Tolerance column (CIRCLE row 10)
          39: [11], // ID 39, highlight Tolerance column (CIRCLE row 11)
          40: [11], // ID 40, highlight Tolerance column (CIRCLE row 12)
          41: [11], // ID 41, highlight Tolerance column (CIRCLE row 13)
          46: [11], // ID 46, highlight Tolerance column (CIRCLE row 14)
          49: [11], // ID 49, highlight Tolerance column (CIRCLE row 15)
        };

        // Loop through all rows and check by ID
        rows.forEach((row) => {
          const idCell = row.cells[0];
          const id = idCell.textContent.trim();

          if (idToHighlight[id]) {
            idToHighlight[id].forEach((colIdx) => {
              if (row.cells[colIdx]) {
                row.cells[colIdx].classList.add("highlight");
              }
            });
          }
        });
      });
    </script>
  </body>
</html>
