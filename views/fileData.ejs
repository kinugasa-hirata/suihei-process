<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Viewer</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
        margin-bottom: 2rem;
      }
      .file-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .data-type {
        font-weight: bold;
      }
      .data-type-CIRCLE {
        color: #198754;
      }
      .data-type-PLANE {
        color: #0d6efd;
      }
      .data-type-DISTANCE {
        color: #ffc107;
      }
      .data-type-PT-COMP {
        color: #dc3545;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">File Data Viewer</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <% if (typeof file !== 'undefined' && file) { %>
      <div class="file-info">
        <h2><%= file.filename %></h2>
        <p>
          <strong>Uploaded:</strong>
          <%= new Date(file.uploaded_at).toLocaleString() %> <% if (typeof
          file.weight !== 'undefined' && file.weight !== null) { %> |
          <strong>Weight:</strong> <%= file.weight %> <% } %>
        </p>

        <form action="/update-weight" method="post">
          <div class="input-group" style="max-width: 250px">
            <input type="hidden" name="fileId" value="<%= file.id %>" />
            <input
              type="number"
              class="form-control"
              name="weight"
              step="0.1"
              value="<%= file.weight !== null ? file.weight : '' %>"
              placeholder="Enter weight"
            />
            <button type="submit" class="btn btn-primary">Update Weight</button>
          </div>
        </form>
      </div>
      <% } %> <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %> <% if (typeof data !== 'undefined' && data && data.length > 0) {
      %>
      <h3>Data Points (<%= data.length %>)</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Index</th>
              <th scope="col">Type</th>
              <th scope="col">X</th>
              <th scope="col">Y</th>
              <th scope="col">Z</th>
              <th scope="col">Diameter</th>
              <th scope="col">Note</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(point) { %>
            <tr>
              <td><%= point.index %></td>
              <td>
                <span class="data-type data-type-<%= point.data_type %>">
                  <%= point.data_type %>
                </span>
              </td>
              <td><%= point.x !== null ? point.x : '-' %></td>
              <td><%= point.y !== null ? point.y : '-' %></td>
              <td><%= point.z !== null ? point.z : '-' %></td>
              <td><%= point.diameter !== null ? point.diameter : '-' %></td>
              <td><%= point.note || '-' %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-warning">
        <p>No data found for this file.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
