<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data - <%= file.filename %></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .data-table {
        margin-top: 2rem;
        overflow-x: auto;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Data for <%= file.filename %></h1>
        <a href="/" class="btn btn-secondary">Back to Files</a>
      </div>

      <% if (locals.message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %>

      <div class="data-table">
        <% if (data && data.length > 0) { %>
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Index</th>
              <th>Type</th>
              <th>X</th>
              <th>Y</th>
              <th>Z</th>
              <th>Rot X</th>
              <th>Rot Y</th>
              <th>Rot Z</th>
              <th>Note</th>
              <th>Diameter</th>
              <th>Tolerance</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(item => { %>
            <tr>
              <td><%= item.index !== null ? item.index : '-' %></td>
              <td><%= item.data_type || '-' %></td>
              <td>
                <%= item.x !== null ? parseFloat(item.x).toFixed(3) : '-' %>
              </td>
              <td>
                <%= item.y !== null ? parseFloat(item.y).toFixed(3) : '-' %>
              </td>
              <td>
                <%= item.z !== null ? parseFloat(item.z).toFixed(3) : '-' %>
              </td>
              <td>
                <%= item.rot_x !== null ? parseFloat(item.rot_x).toFixed(3) :
                '-' %>
              </td>
              <td>
                <%= item.rot_y !== null ? parseFloat(item.rot_y).toFixed(3) :
                '-' %>
              </td>
              <td>
                <%= item.rot_z !== null ? parseFloat(item.rot_z).toFixed(3) :
                '-' %>
              </td>
              <td><%= item.note || '-' %></td>
              <td>
                <%= item.diameter !== null ?
                parseFloat(item.diameter).toFixed(3) : '-' %>
              </td>
              <td>
                <%= item.tolerance !== null ?
                parseFloat(item.tolerance).toFixed(3) : '-' %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <div class="alert alert-warning">No data available for this file.</div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
