<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Viewer</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1400px;
        margin-top: 2rem;
      }
      .file-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .table-responsive {
        overflow-x: auto;
      }
      /* Highlight style */
      .highlight {
        background-color: #fff3cd !important;
        border: 2px solid #fd7e14 !important;
        font-weight: bold;
      }
      .data-type-CIRCLE {
        color: #198754;
        font-weight: bold;
      }
      .data-type-PLANE {
        color: #0d6efd;
        font-weight: bold;
      }
      .data-type-DISTANCE {
        color: #ffc107;
        font-weight: bold;
      }
      .data-type-PT-COMP {
        color: #dc3545;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">File Data Viewer</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <% if (typeof file !== 'undefined' && file) { %>
      <div class="file-info">
        <h2><%= file.filename %></h2>
        <div class="row">
          <div class="col-md-6">
            <p><strong>File ID:</strong> <%= file.id %></p>
            <p>
              <strong>Uploaded:</strong> <%= new
              Date(file.uploaded_at).toLocaleString() %>
            </p>
          </div>
          <div class="col-md-6">
            <p>
              <% if (typeof file.weight !== 'undefined' && file.weight !== null)
              { %>
              <strong>Weight:</strong> <%= (parseFloat(file.weight) *
              1000).toFixed(1) %> g <% } else { %> <strong>Weight:</strong>
              <span class="text-muted">Not set</span>
              <% } %>
            </p>

            <form action="/update-weight" method="post">
              <div class="input-group" style="max-width: 300px">
                <input type="hidden" name="fileId" value="<%= file.id %>" />
                <input
                  type="number"
                  class="form-control"
                  name="weight"
                  step="0.1"
                  value="<%= file.weight !== null ? file.weight : '' %>"
                  placeholder="Enter weight (kg)"
                />
                <button type="submit" class="btn btn-primary">
                  Update Weight
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } %> <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %> <% if (typeof data !== 'undefined' && data && data.length > 0) {
      %>
      <h3>Data Points (<%= data.length %>)</h3>

      <div class="table-responsive">
        <table class="table table-striped table-bordered" id="dataTable">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Index</th>
              <th>Type</th>
              <th>X</th>
              <th>Y</th>
              <th>Z</th>
              <th>Rot X</th>
              <th>Rot Y</th>
              <th>Rot Z</th>
              <th>Note</th>
              <th>Diameter</th>
              <th>Tolerance</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(point, rowIndex) { %>
            <tr data-index="<%= rowIndex %>">
              <td><%= point.id %></td>
              <td><%= point.index %></td>
              <td class="data-type-<%= point.data_type %>">
                <%= point.data_type %>
              </td>
              <td>
                <% if(point.x !== null && point.x !== undefined) { %> <%= typeof
                point.x === 'number' ? point.x.toFixed(3) : ((point.x === 'NaN'
                || point.x === 'NAN') ? 'NaN' : (parseFloat(point.x) ?
                parseFloat(point.x).toFixed(3) : point.x)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.y !== null && point.y !== undefined) { %> <%= typeof
                point.y === 'number' ? point.y.toFixed(3) : ((point.y === 'NaN'
                || point.y === 'NAN') ? 'NaN' : (parseFloat(point.y) ?
                parseFloat(point.y).toFixed(3) : point.y)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.z !== null && point.z !== undefined) { %> <%= typeof
                point.z === 'number' ? point.z.toFixed(3) : ((point.z === 'NaN'
                || point.z === 'NAN') ? 'NaN' : (parseFloat(point.z) ?
                parseFloat(point.z).toFixed(3) : point.z)) %> <% } else { %> -
                <% } %>
              </td>
              <td>
                <% if(point.rot_x !== null && point.rot_x !== undefined) { %>
                <%= typeof point.rot_x === 'number' ? point.rot_x.toFixed(3) :
                ((point.rot_x === 'NaN' || point.rot_x === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_x) ? parseFloat(point.rot_x).toFixed(3) :
                point.rot_x)) %> <% } else { %> - <% } %>
              </td>
              <td>
                <% if(point.rot_y !== null && point.rot_y !== undefined) { %>
                <%= typeof point.rot_y === 'number' ? point.rot_y.toFixed(3) :
                ((point.rot_y === 'NaN' || point.rot_y === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_y) ? parseFloat(point.rot_y).toFixed(3) :
                point.rot_y)) %> <% } else { %> - <% } %>
              </td>
              <td>
                <% if(point.rot_z !== null && point.rot_z !== undefined) { %>
                <%= typeof point.rot_z === 'number' ? point.rot_z.toFixed(3) :
                ((point.rot_z === 'NaN' || point.rot_z === 'NAN') ? 'NaN' :
                (parseFloat(point.rot_z) ? parseFloat(point.rot_z).toFixed(3) :
                point.rot_z)) %> <% } else { %> - <% } %>
              </td>
              <td><%= point.note || '-' %></td>
              <td>
                <% if(point.diameter !== null && point.diameter !== undefined) {
                %> <%= typeof point.diameter === 'number' ?
                point.diameter.toFixed(3) : ((point.diameter === 'NaN' ||
                point.diameter === 'NAN') ? 'NaN' : (parseFloat(point.diameter)
                ? parseFloat(point.diameter).toFixed(3) : point.diameter)) %> <%
                } else { %> - <% } %>
              </td>
              <td>
                <% if(point.tolerance !== null && point.tolerance !== undefined)
                { %> <%= typeof point.tolerance === 'number' ?
                point.tolerance.toFixed(3) : ((point.tolerance === 'NaN' ||
                point.tolerance === 'NAN') ? 'NaN' :
                (parseFloat(point.tolerance) ?
                parseFloat(point.tolerance).toFixed(3) : point.tolerance)) %> <%
                } else { %> - <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Data Type Summary -->
      <div class="mt-4">
        <h4>Data Type Summary</h4>
        <% const typeCounts = {}; data.forEach(function(point) {
        typeCounts[point.data_type] = (typeCounts[point.data_type] || 0) + 1;
        }); %>

        <div class="row">
          <% Object.entries(typeCounts).forEach(function([type, count]) { %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title data-type-<%= type %>"><%= type %></h5>
                <p class="card-text">
                  Count: <%= count %> (<%= Math.round((count / data.length) *
                  100) %>%)
                </p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>

      <% } else { %>
      <div class="alert alert-warning">
        <p>No data found for this file.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Table Cell Highlighting Script -->
    <script>
      // Updated cell highlighting script based on your feedback
      // Standardized cell highlighting script using file 250 as the base template
      document.addEventListener("DOMContentLoaded", function () {
        // Get table and check if it exists
        const table = document.getElementById("dataTable");
        if (!table) return;

        // Get file ID and other identifiers from page
        const fileInfoElement = document.querySelector(".file-info");
        const fileIdElement = fileInfoElement
          ? fileInfoElement.querySelector("p strong:first-child")
          : null;
        let fileId = "";

        if (fileIdElement && fileIdElement.textContent.includes("File ID")) {
          const fileIdText = fileIdElement.nextSibling
            ? fileIdElement.nextSibling.textContent.trim()
            : "";
          fileId = fileIdText.replace(":", "").trim();
        }

        // Also check URL and heading
        const fileUrl = window.location.href;
        const fileHeading = fileInfoElement
          ? fileInfoElement.querySelector("h2").textContent.trim()
          : "";

        // The standard set of cells to highlight (using file 250 as the base template)
        // You can manually adjust these coordinates for each file
        const cellsToHighlight = [
          // First 4 numbers
          [2, 4], //①
          [19, 11], //②
          [14, 5], //③
          [10, 4], //④

          // Two blanks
          ["-", "-"], //⑤
          ["-", "-"], //⑥

          // Five more values (⑦-⑪)
          [19, 11], //⑥
          [20, 11], //⑦
          [21, 11], //⑧
          [22, 11], //⑨
          [23, 11], //⑩
          [24, 11], //⑪
        ];

        // Get all rows in tbody
        const rows = table.querySelectorAll("tbody tr");

        // Apply highlighting to specified cells
        cellsToHighlight.forEach(([rowIndex, colIndex]) => {
          // Make sure row and column exist
          if (rowIndex < rows.length) {
            const row = rows[rowIndex];
            if (colIndex < row.cells.length) {
              row.cells[colIndex].classList.add("highlight");
            }
          }
        });

        // Log info for debugging (can be removed in production)
        console.log("File ID:", fileId);
        console.log("File URL:", fileUrl);
        console.log("File heading:", fileHeading);
        console.log("Number of rows:", rows.length);
        console.log("Cells highlighted:", cellsToHighlight);
      });
    </script>
  </body>
</html>
