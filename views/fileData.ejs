<!-- views/fileData.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Viewer</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1400px;
        margin-top: 2rem;
        margin-bottom: 2rem;
      }
      .file-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .data-type {
        font-weight: bold;
      }
      .data-type-CIRCLE {
        color: #198754;
      }
      .data-type-PLANE {
        color: #0d6efd;
      }
      .data-type-DISTANCE {
        color: #ffc107;
      }
      .data-type-PT-COMP {
        color: #dc3545;
      }
      .table-responsive {
        overflow-x: auto;
      }
      .data-cell {
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">File Data Viewer</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <% if (typeof file !== 'undefined' && file) { %>
      <div class="file-info">
        <h2><%= file.filename %></h2>
        <div class="row">
          <div class="col-md-6">
            <p><strong>File ID:</strong> <%= file.id %></p>
            <p>
              <strong>Uploaded:</strong> <%= new
              Date(file.uploaded_at).toLocaleString() %>
            </p>
          </div>
          <div class="col-md-6">
            <p>
              <% if (typeof file.weight !== 'undefined' && file.weight !== null)
              { %>
              <strong>Weight:</strong> <%= file.weight %> <% } else { %>
              <strong>Weight:</strong> <span class="text-muted">Not set</span>
              <% } %>
            </p>

            <form action="/update-weight" method="post">
              <div class="input-group" style="max-width: 300px">
                <input type="hidden" name="fileId" value="<%= file.id %>" />
                <input
                  type="number"
                  class="form-control"
                  name="weight"
                  step="0.1"
                  value="<%= file.weight !== null ? file.weight : '' %>"
                  placeholder="Enter weight"
                />
                <button type="submit" class="btn btn-primary">
                  Update Weight
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } %> <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-info"><%= message %></div>
      <% } %> <% if (typeof data !== 'undefined' && data && data.length > 0) {
      %>
      <h3>Data Points (<%= data.length %>)</h3>

      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Index</th>
              <th>Type</th>
              <th>X</th>
              <th>Y</th>
              <th>Z</th>
              <th>Rot X</th>
              <th>Rot Y</th>
              <th>Rot Z</th>
              <th>Note</th>
              <th>Diameter</th>
              <th>Tolerance</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(point) { %>
            <tr>
              <td><%= point.id %></td>
              <td><%= point.index %></td>
              <td>
                <span class="data-type data-type-<%= point.data_type %>">
                  <%= point.data_type %>
                </span>
              </td>
              <td><%= point.x !== null ? point.x.toFixed(3) : '-' %></td>
              <td><%= point.y !== null ? point.y.toFixed(3) : '-' %></td>
              <td><%= point.z !== null ? point.z.toFixed(3) : '-' %></td>
              <td>
                <%= point.rot_x !== null ? point.rot_x.toFixed(3) : '-' %>
              </td>
              <td>
                <%= point.rot_y !== null ? point.rot_y.toFixed(3) : '-' %>
              </td>
              <td>
                <%= point.rot_z !== null ? point.rot_z.toFixed(3) : '-' %>
              </td>
              <td class="data-cell"><%= point.note || '-' %></td>
              <td>
                <%= point.diameter !== null ? point.diameter.toFixed(3) : '-' %>
              </td>
              <td>
                <%= point.tolerance !== null ? point.tolerance.toFixed(3) : '-'
                %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Data Type Summary -->
      <div class="mt-4">
        <h4>Data Type Summary</h4>
        <% const typeCounts = {}; data.forEach(function(point) {
        typeCounts[point.data_type] = (typeCounts[point.data_type] || 0) + 1;
        }); %>

        <div class="row">
          <% Object.entries(typeCounts).forEach(function([type, count]) { %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title data-type data-type-<%= type %>">
                  <%= type %>
                </h5>
                <p class="card-text">
                  Count: <%= count %> (<%= Math.round((count / data.length) *
                  100) %>%)
                </p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>

      <% } else { %>
      <div class="alert alert-warning">
        <p>No data found for this file.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
