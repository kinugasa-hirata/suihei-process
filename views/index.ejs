<!-- Simplified index.ejs - Fixed token '=' syntax error -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Processor</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .upload-form,
      .summary-form {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 5px;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .file-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
      }
      .file-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem 1rem;
        text-align: center;
        transition: all 0.2s;
        cursor: pointer;
        border: 2px solid #dee2e6;
        position: relative;
      }
      .file-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #adb5bd;
      }
      .file-card.selected {
        border-color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
      }
      .file-card.selected .file-number {
        color: #000;
      }
      .file-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 0.5rem;
      }
      .weight-form {
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
      }
      .weight-input {
        width: 80px;
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px 0 0 4px;
        border: 1px solid #ced4da;
        border-right: none;
      }
      .weight-btn {
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0 4px 4px 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">TXT to JSON File Processor</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <!-- Summary Report form -->
      <div class="summary-form">
        <h3>Generate Summary Report</h3>
        <p>Select a range of files to include in the summary report.</p>

        <form action="/summary" method="get">
          <div class="row mb-3">
            <div class="col-md-4">
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control"
                id="minFile"
                name="minFile"
                placeholder="e.g., 240"
              />
            </div>
            <div class="col-md-4">
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control"
                id="maxFile"
                name="maxFile"
                placeholder="e.g., 250"
              />
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-info">
                Generate Report
              </button>
            </div>
          </div>
        </form>
      </div>

      <!-- Upload form -->
      <div class="upload-form">
        <h2>Upload Files</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="files" class="form-label">Select TXT files</label>
            <input
              type="file"
              class="form-control"
              id="files"
              name="files"
              accept=".txt"
              multiple
              required
            />
          </div>
          <div class="mb-3">
            <p class="mb-2">If filename already exists:</p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="skipAction"
                value="skip"
                checked
              />
              <label class="form-check-label" for="skipAction">
                Skip (don't upload)
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="overwriteAction"
                value="overwrite"
              />
              <label class="form-check-label" for="overwriteAction">
                Overwrite (replace existing data)
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">
            Upload and Process
          </button>
        </form>
      </div>

      <!-- File grid -->
      <h2>Processed Files</h2>

      <% if (files && files.length > 0) { %>
      <div class="file-grid">
        <% // Sort files by numeric part of filename (ascending) var sortedFiles
        = files.slice(); // Create a copy of the array
        sortedFiles.sort(function(a, b) { var numA =
        parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); var numB =
        parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return numA -
        numB; }); sortedFiles.forEach(function(file) { // Extract number from
        filename if possible var fileNumber = file.filename; var match =
        file.filename.match(/^(\d+)/); if (match) { fileNumber = match[1]; } %>
        <div class="file-card" data-file-id="<%= file.id %>">
          <a href="/files/<%= file.id %>" class="text-decoration-none">
            <div class="file-number"><%= fileNumber %></div>
          </a>
          <form action="/update-weight" method="post" class="weight-form">
            <input type="hidden" name="fileId" value="<%= file.id %>" />
            <input
              type="number"
              class="weight-input"
              name="weight"
              step="0.1"
              value="<%= file.weight ? parseFloat(file.weight).toFixed(1) : '' %>"
              placeholder="Weight"
              required
            />
            <button type="submit" class="btn btn-primary weight-btn">
              Save
            </button>
          </form>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <p>No files uploaded yet. Upload TXT files to process them.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
