<!-- Simplified index.ejs - Fixed token '=' syntax error -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Processor</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .upload-form,
      .summary-form {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 5px;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .file-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
      }
      .file-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem 1rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid #dee2e6;
        position: relative;
        user-select: none; /* Prevent text selection during interactions */
      }
      .file-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #adb5bd;
      }
      .file-card.selected {
        background-color: #e3f2fd;
        border-color: #0d6efd;
        box-shadow: 0 0 0 2px #0d6efd;
      }
      .file-card.selected .file-number {
        color: #000;
      }
      .file-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 0.5rem;
      }
      .weight-form {
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
      }
      .weight-input {
        width: 80px;
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px 0 0 4px;
        border: 1px solid #ced4da;
        border-right: none;
      }
      .weight-btn {
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0 4px 4px 0;
      }
      .file-card .file-content {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .file-name {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
      }
      .delete-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(220, 53, 69, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        border-radius: 6px;
      }
      .file-card.deleting .delete-overlay {
        opacity: 1;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">TXT to JSON File Processor</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <!-- Summary Report form -->
      <div class="summary-form">
        <h3>Generate Summary Report</h3>
        <p>Select a range of files to include in the summary report.</p>

        <form id="rangeSelectForm" onsubmit="selectFileRange(event)">
          <div class="row mb-3">
            <div class="col-md-4">
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control"
                id="minFile"
                name="minFile"
                placeholder="e.g., 240"
              />
            </div>
            <div class="col-md-4">
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control"
                id="maxFile"
                name="maxFile"
                placeholder="e.g., 250"
              />
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-info">Select Data</button>
            </div>
          </div>
        </form>
      </div>

      <!-- Upload form -->
      <div class="upload-form">
        <h2>Upload Files</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="files" class="form-label">Select TXT files</label>
            <input
              type="file"
              class="form-control"
              id="files"
              name="files"
              accept=".txt"
              multiple
              required
            />
          </div>
          <div class="mb-3">
            <p class="mb-2">If filename already exists:</p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="skipAction"
                value="skip"
                checked
              />
              <label class="form-check-label" for="skipAction">
                Skip (don't upload)
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="overwriteAction"
                value="overwrite"
              />
              <label class="form-check-label" for="overwriteAction">
                Overwrite (replace existing data)
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">
            Upload and Process
          </button>
        </form>
      </div>

      <!-- File grid -->
      <div class="d-flex justify-content-between align-items-center">
        <h2>Processed Files</h2>
        <button
          id="viewSelectedBtn"
          class="btn btn-info"
          disabled
          onclick="document.querySelector('form[action=\'/summary\']').submit();"
        >
          View Selected Files
        </button>
      </div>

      <% if (files && files.length > 0) { %>
      <div class="file-grid">
        <% var sortedFiles = []; files.forEach(function(file) {
        sortedFiles.push(file); }); sortedFiles.sort(function(a, b) { var numA =
        parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); var numB =
        parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return numA -
        numB; }); sortedFiles.forEach(function(file) { var fileNumber =
        file.filename; var match = file.filename.match(/^(\d+)/); if (match) {
        fileNumber = match[1]; } %>
        <div
          class="file-card"
          data-file-id="<%= file.id %>"
          data-filename="<%= file.filename %>"
        >
          <div class="delete-overlay">Release to Delete</div>
          <div class="file-content">
            <div class="file-name"><%= file.filename %></div>
            <div class="file-number"><%= fileNumber %></div>
            <% if (file.weight) { %>
            <div class="weight-display mb-2">
              <%= (parseFloat(file.weight) * 1000).toFixed(1) %> g
            </div>
            <% } %>
            <form action="/update-weight" method="post" class="weight-form">
              <input type="hidden" name="fileId" value="<%= file.id %>" />
              <input
                type="number"
                class="weight-input"
                name="weight"
                step="0.1"
                value="<%= file.weight ? parseFloat(file.weight).toFixed(1) : '' %>"
                placeholder="Weight (kg)"
                required
              />
              <button type="submit" class="btn btn-primary weight-btn">
                Save
              </button>
            </form>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <p>No files uploaded yet. Upload TXT files to process them.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const fileCards = document.querySelectorAll(".file-card");
        const selectedFiles = new Set();
        let pressTimer;
        let isDragging = false;

        // Helper function to update the summary form with selected files
        function updateSummaryForm() {
          const minFileInput = document.getElementById("minFile");
          const maxFileInput = document.getElementById("maxFile");
          const viewSelectedBtn = document.getElementById("viewSelectedBtn");

          if (selectedFiles.size > 0) {
            // Enable the View Selected button
            viewSelectedBtn.disabled = false;
            viewSelectedBtn.textContent = `View Selected Files (${selectedFiles.size})`;

            // Clear the min/max inputs when files are manually selected
            minFileInput.value = "";
            maxFileInput.value = "";

            // Add hidden input for selected files if it doesn't exist
            let selectedFilesInput = document.querySelector(
              'input[name="selectedFiles"]'
            );
            if (!selectedFilesInput) {
              selectedFilesInput = document.createElement("input");
              selectedFilesInput.type = "hidden";
              selectedFilesInput.name = "selectedFiles";
              document
                .querySelector('form[action="/summary"]')
                .appendChild(selectedFilesInput);
            }
            selectedFilesInput.value = Array.from(selectedFiles).join(",");
          } else {
            // Disable the View Selected button when no files are selected
            viewSelectedBtn.disabled = true;
            viewSelectedBtn.textContent = "View Selected Files";
          }
        }

        fileCards.forEach((card) => {
          const fileId = card.dataset.fileId;
          let tapCount = 0;
          let lastTap = 0;

          // Handle single tap/click
          card.addEventListener("click", function (e) {
            // Ignore clicks on form elements
            if (e.target.closest("form")) return;

            const now = Date.now();
            const DOUBLE_TAP_DELAY = 300; // ms

            if (tapCount === 0) {
              tapCount = 1;
              lastTap = now;

              // Single tap timer
              setTimeout(() => {
                if (tapCount === 1) {
                  // Single tap action - toggle selection
                  card.classList.toggle("selected");
                  if (card.classList.contains("selected")) {
                    selectedFiles.add(fileId);
                  } else {
                    selectedFiles.delete(fileId);
                  }
                  updateSummaryForm();
                }
                tapCount = 0;
              }, DOUBLE_TAP_DELAY);
            } else {
              if (now - lastTap < DOUBLE_TAP_DELAY) {
                // Double tap action - view file
                window.location.href = `/files/${fileId}`;
              }
              tapCount = 0;
            }
          });

          // Handle long press
          card.addEventListener("mousedown", function (e) {
            if (e.target.closest("form")) return;

            pressTimer = setTimeout(() => {
              card.classList.add("deleting");
            }, 2000);
          });

          card.addEventListener("mousemove", function () {
            isDragging = true;
            clearTimeout(pressTimer);
          });

          card.addEventListener("mouseup", function () {
            clearTimeout(pressTimer);
            if (card.classList.contains("deleting")) {
              if (
                confirm(
                  `Are you sure you want to delete file ${card.dataset.filename}?`
                )
              ) {
                fetch(`/delete-file`, {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                  },
                  body: JSON.stringify({ fileId: fileId }),
                })
                  .then((response) => response.json())
                  .then((data) => {
                    if (data.success) {
                      card.remove();
                    }
                  });
              }
              card.classList.remove("deleting");
            }
            isDragging = false;
          });

          // Handle touch events for mobile
          card.addEventListener("touchstart", function (e) {
            if (e.target.closest("form")) return;

            pressTimer = setTimeout(() => {
              card.classList.add("deleting");
            }, 2000);
          });

          card.addEventListener("touchend", function (e) {
            clearTimeout(pressTimer);
            if (card.classList.contains("deleting")) {
              if (
                confirm(
                  `Are you sure you want to delete file ${card.dataset.filename}?`
                )
              ) {
                fetch(`/delete-file`, {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                  },
                  body: JSON.stringify({ fileId: fileId }),
                })
                  .then((response) => response.json())
                  .then((data) => {
                    if (data.success) {
                      card.remove();
                    }
                  });
              }
              card.classList.remove("deleting");
            }
          });

          card.addEventListener("touchmove", function () {
            clearTimeout(pressTimer);
          });
        });

        // Add this new function to handle range selection
        window.selectFileRange = function (event) {
          event.preventDefault();

          const minFile = parseInt(document.getElementById("minFile").value);
          const maxFile = parseInt(document.getElementById("maxFile").value);

          if (isNaN(minFile) || isNaN(maxFile)) {
            alert("Please enter valid file numbers");
            return;
          }

          fileCards.forEach((card) => {
            const filename = card.dataset.filename;
            const fileNumber = parseInt(filename.match(/^\d+/)?.[0]);

            if (fileNumber >= minFile && fileNumber <= maxFile) {
              // Add to selection
              card.classList.add("selected");
              selectedFiles.add(card.dataset.fileId);
            }
          });

          updateSummaryForm();
        };
      });
    </script>
  </body>
</html>
