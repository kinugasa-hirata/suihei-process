<!-- views/index.ejs - Simple version to fix syntax errors -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TXT to JSON File Processor</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .upload-form {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 5px;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .summary-form {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: #e9ecef;
        border-radius: 5px;
      }
      .file-table {
        margin-top: 2rem;
      }
      .form-range-group {
        display: flex;
        gap: 1rem;
        align-items: end;
      }
      .range-input {
        width: 120px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">TXT to JSON File Processor</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <!-- File selection for summary -->
      <div class="summary-form">
        <h3>Generate Summary Report</h3>
        <p>Select a range of files to include in the summary report.</p>

        <form action="/summary" method="get">
          <div class="form-range-group mb-3">
            <div>
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="minFile"
                name="minFile"
                placeholder="e.g., 240"
              />
            </div>
            <div>
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="maxFile"
                name="maxFile"
                placeholder="e.g., 250"
              />
            </div>
            <div>
              <button type="submit" class="btn btn-info">
                Generate Report
              </button>
            </div>
          </div>
          <div class="form-text">Leave fields empty to include all files.</div>
        </form>
      </div>

      <!-- Upload form -->
      <div class="upload-form">
        <h2>Upload Files</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="files" class="form-label">Select TXT files</label>
            <input
              type="file"
              class="form-control"
              id="files"
              name="files"
              accept=".txt"
              multiple
              required
            />
          </div>
          <div class="mb-3">
            <p class="mb-2">If filename already exists:</p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="skipAction"
                value="skip"
                checked
              />
              <label class="form-check-label" for="skipAction">
                Skip (don't upload)
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="overwriteAction"
                value="overwrite"
              />
              <label class="form-check-label" for="overwriteAction">
                Overwrite (replace existing data)
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">
            Upload and Process
          </button>
        </form>
      </div>

      <!-- File listing -->
      <h2>Processed Files</h2>

      <% if (files && files.length > 0) { %>
      <div class="file-table">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Filename</th>
              <th>Uploaded At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% // Sort files by numeric part of filename (ascending) var
            sortedFiles = []; for (var i = 0; i < files.length; i++) {
            sortedFiles.push(files[i]); } sortedFiles.sort(function(a, b) { var
            numA = parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); var
            numB = parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return
            numA - numB; }); for (var i = 0; i < sortedFiles.length; i++) { var
            file = sortedFiles[i]; %>
            <tr>
              <td><%= file.filename %></td>
              <td><%= new Date(file.uploaded_at).toLocaleString() %></td>
              <td>
                <div class="d-flex align-items-center">
                  <a
                    href="/files/<%= file.id %>"
                    class="btn btn-sm btn-info me-2"
                  >
                    View Data
                  </a>
                  <form
                    action="/update-weight"
                    method="post"
                    class="d-flex me-2"
                  >
                    <input type="hidden" name="fileId" value="<%= file.id %>" />
                    <input
                      type="number"
                      class="form-control form-control-sm"
                      style="width: 100px"
                      name="weight"
                      step="0.1"
                      value="<%= file.weight ? parseFloat(file.weight).toFixed(1) : '' %>"
                      placeholder="Weight"
                      required
                    />
                    <button type="submit" class="btn btn-sm btn-primary ms-1">
                      Save
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <p>No files uploaded yet. Upload TXT files to process them.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
