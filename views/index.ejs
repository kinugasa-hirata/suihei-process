<!-- views/index.ejs - With file selection and Summary Report section -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TXT to JSON File Processor</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .upload-form,
      .summary-form {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 5px;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .file-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
      }
      .file-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem 1rem;
        text-align: center;
        transition: all 0.2s;
        cursor: pointer;
        border: 2px solid #dee2e6;
        position: relative;
        user-select: none;
        touch-action: manipulation;
      }
      .file-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #adb5bd;
      }
      .file-card.active {
        transform: scale(0.95);
        background-color: #e2e6ea;
      }
      .file-card.deleting {
        background-color: rgba(220, 53, 69, 0.2);
        border-color: #dc3545;
      }
      .file-card.selected {
        border-color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
      }
      .file-card.selected .file-number {
        color: #000;
      }
      .file-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 0.5rem;
      }
      .weight-form {
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
      }
      .weight-input {
        width: 80px;
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px 0 0 4px;
        border: 1px solid #ced4da;
        border-right: none;
      }
      .weight-btn {
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0 4px 4px 0;
      }
      .delete-progress {
        position: absolute;
        bottom: 0;
        left: 0;
        height: 4px;
        background-color: #dc3545;
        width: 0;
        transition: width 2s linear;
      }
      .delete-progress.active {
        width: 100%;
      }
      .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
      }
      .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border-radius: 5px;
        max-width: 500px;
      }
      .modal-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 1rem;
        gap: 0.5rem;
      }
      .form-range-group {
        display: flex;
        gap: 1rem;
        align-items: end;
      }
      .range-input {
        width: 120px;
      }
      .selection-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 2px solid #0d6efd;
        background-color: transparent;
        transition: background-color 0.2s;
      }
      .selected .selection-indicator {
        background-color: #0d6efd;
      }
      .file-selection-controls {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">TXT to JSON File Processor</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <!-- Summary Report form -->
      <div class="summary-form">
        <h3>Generate Summary Report</h3>
        <p>
          Select a range of files to include in the summary report, or select
          individual files below.
        </p>

        <form id="summaryForm" action="/summary" method="get">
          <div class="form-range-group mb-2">
            <div>
              <label for="minFile" class="form-label">From File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="minFile"
                name="minFile"
                placeholder="e.g., 240"
              />
            </div>
            <div>
              <label for="maxFile" class="form-label">To File #</label>
              <input
                type="number"
                class="form-control range-input"
                id="maxFile"
                name="maxFile"
                placeholder="e.g., 250"
              />
            </div>
            <div>
              <button type="submit" class="btn btn-info">
                Generate Report
              </button>
            </div>
          </div>

          <!-- Hidden input for selected files -->
          <input
            type="hidden"
            id="selectedFiles"
            name="selectedFiles"
            value=""
          />

          <div class="form-text mb-3">
            Leave fields empty to use selected files below.
          </div>

          <div
            id="selectionSummary"
            class="alert alert-info"
            style="display: none"
          >
            <span id="selectedCount">0</span> files selected
            <button
              type="button"
              id="clearSelection"
              class="btn btn-sm btn-secondary ms-2"
            >
              Clear Selection
            </button>
          </div>
        </form>
      </div>

      <!-- Upload form -->
      <div class="upload-form">
        <h2>Upload Files</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="files" class="form-label">Select TXT files</label>
            <input
              type="file"
              class="form-control"
              id="files"
              name="files"
              accept=".txt"
              multiple
              required
            />
          </div>
          <div class="mb-3">
            <p class="mb-2">If filename already exists:</p>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="skipAction"
                value="skip"
                checked
              />
              <label class="form-check-label" for="skipAction">
                Skip (don't upload)
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="overwriteAction"
                id="overwriteAction"
                value="overwrite"
              />
              <label class="form-check-label" for="overwriteAction">
                Overwrite (replace existing data)
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">
            Upload and Process
          </button>
        </form>
      </div>

      <!-- File grid -->
      <div class="file-selection-controls">
        <h2>Processed Files</h2>
        <div>
          <button id="selectAll" class="btn btn-outline-primary btn-sm">
            Select All
          </button>
          <button id="deselectAll" class="btn btn-outline-secondary btn-sm">
            Deselect All
          </button>
        </div>
      </div>

      <% if (files && files.length > 0) { %>
      <div class="file-grid">
        <% // Sort files by numeric part of filename (ascending) var sortedFiles
        = []; for (var i = 0; i < files.length; i++) {
        sortedFiles.push(files[i]); } sortedFiles.sort(function(a, b) { var numA
        = parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); var numB =
        parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return numA -
        numB; }); for (var i = 0; i < sortedFiles.length; i++) { var file =
        sortedFiles[i]; // Extract number from filename if possible var
        fileNumber = file.filename; var match = file.filename.match(/^(\d+)/);
        if (match) { fileNumber = match[1]; } %>
        <div
          class="file-card"
          data-file-id="<%= file.id %>"
          data-file-name="<%= file.filename %>"
          data-file-number="<%= fileNumber %>"
        >
          <div class="selection-indicator"></div>
          <div class="file-number"><%= fileNumber %></div>
          <form action="/update-weight" method="post" class="weight-form">
            <input type="hidden" name="fileId" value="<%= file.id %>" />
            <input
              type="number"
              class="weight-input"
              name="weight"
              step="0.1"
              value="<%= file.weight ? parseFloat(file.weight).toFixed(1) : '' %>"
              placeholder="Weight"
              required
            />
            <button type="submit" class="btn btn-primary weight-btn">
              Save
            </button>
          </form>
          <div class="delete-progress"></div>
        </div>
        <% } %>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <p>No files uploaded yet. Upload TXT files to process them.</p>
      </div>
      <% } %>
    </div>

    <!-- Delete confirmation modal -->
    <div id="deleteModal" class="modal">
      <div class="modal-content">
        <h4>Confirm Delete</h4>
        <p>
          Are you sure you want to delete file <span id="fileToDelete"></span>?
        </p>
        <div class="modal-actions">
          <button id="cancelDelete" class="btn btn-secondary">Cancel</button>
          <form id="deleteForm" action="/delete-file" method="post">
            <input type="hidden" id="deleteFileId" name="fileId" value="" />
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Get all file cards
        var fileCards = document.querySelectorAll(".file-card");
        var modal = document.getElementById("deleteModal");
        var fileToDelete = document.getElementById("fileToDelete");
        var deleteFileId = document.getElementById("deleteFileId");
        var cancelDelete = document.getElementById("cancelDelete");
        var selectedFilesInput = document.getElementById("selectedFiles");
        var selectAllBtn = document.getElementById("selectAll");
        var deselectAllBtn = document.getElementById("deselectAll");
        var selectedCount = document.getElementById("selectedCount");
        var selectionSummary = document.getElementById("selectionSummary");
        var clearSelectionBtn = document.getElementById("clearSelection");
        var summaryForm = document.getElementById("summaryForm");

        // Keep track of selected files
        var selectedFiles = [];

        // Update selection summary
        function updateSelectionSummary() {
          if (selectedFiles.length > 0) {
            selectedCount.textContent = selectedFiles.length;
            selectionSummary.style.display = "block";
            selectedFilesInput.value = selectedFiles.join(",");
          } else {
            selectionSummary.style.display = "none";
            selectedFilesInput.value = "";
          }
        }

        // Toggle file selection
        function toggleFileSelection(card, fileId) {
          if (card.classList.contains("selected")) {
            // Deselect
            card.classList.remove("selected");
            var index = selectedFiles.indexOf(fileId);
            if (index !== -1) {
              selectedFiles.splice(index, 1);
            }
          } else {
            // Select
            card.classList.add("selected");
            if (selectedFiles.indexOf(fileId) === -1) {
              selectedFiles.push(fileId);
            }
          }
          updateSelectionSummary();
        }

        // Close the modal when cancel is clicked
        cancelDelete.addEventListener("click", function () {
          modal.style.display = "none";
        });

        // Close the modal when clicking outside of it
        window.addEventListener("click", function (event) {
          if (event.target === modal) {
            modal.style.display = "none";
          }
        });

        // Select/deselect all buttons
        selectAllBtn.addEventListener("click", function () {
          selectedFiles = [];
          fileCards.forEach(function (card) {
            var fileId = card.getAttribute("data-file-id");
            card.classList.add("selected");
            selectedFiles.push(fileId);
          });
          updateSelectionSummary();
        });

        deselectAllBtn.addEventListener("click", function () {
          selectedFiles = [];
          fileCards.forEach(function (card) {
            card.classList.remove("selected");
          });
          updateSelectionSummary();
        });

        // Clear selection button
        clearSelectionBtn.addEventListener("click", function () {
          selectedFiles = [];
          fileCards.forEach(function (card) {
            card.classList.remove("selected");
          });
          updateSelectionSummary();
        });

        // Submit form with selected files
        summaryForm.addEventListener("submit", function (e) {
          // If no range is specified but files are selected, use selected files
          var minFile = document.getElementById("minFile").value;
          var maxFile = document.getElementById("maxFile").value;

          if ((!minFile || !maxFile) && selectedFiles.length === 0) {
            e.preventDefault();
            alert("Please select files or specify a range.");
          }
        });

        // Add event listeners to each card
        fileCards.forEach(function (card) {
          var pressTimer;
          var clickTimer;
          var pressStart;
          var progressBar = card.querySelector(".delete-progress");
          var weightForm = card.querySelector(".weight-form");
          var fileId = card.getAttribute("data-file-id");
          var fileName = card.getAttribute("data-file-name");

          // Prevent form events from triggering card events
          weightForm.addEventListener("click", function (e) {
            e.stopPropagation();
          });

          weightForm.addEventListener("touchstart", function (e) {
            e.stopPropagation();
          });

          // Handle mouse events
          card.addEventListener("mousedown", function (e) {
            // Start tracking press time
            pressStart = new Date().getTime();
            card.classList.add("active");
            pressTimer = setTimeout(function () {
              showDeleteConfirmation(fileId, fileName);
            }, 2000);
            progressBar.classList.add("active");
          });

          card.addEventListener("mouseup", function (e) {
            card.classList.remove("active");
            clearTimeout(pressTimer);
            progressBar.classList.remove("active");
            progressBar.style.width = "0";

            // Check if it was a short tap (for selection)
            var pressDuration = new Date().getTime() - pressStart;
            if (pressDuration < 500) {
              toggleFileSelection(card, fileId);
            }
          });

          card.addEventListener("mouseleave", function () {
            card.classList.remove("active");
            clearTimeout(pressTimer);
            progressBar.classList.remove("active");
            progressBar.style.width = "0";
          });

          // Handle double click to view
          card.addEventListener("dblclick", function (e) {
            window.location.href = "/files/" + fileId;
          });

          // Handle touch events for mobile
          card.addEventListener(
            "touchstart",
            function (e) {
              pressStart = new Date().getTime();
              card.classList.add("active");
              pressTimer = setTimeout(function () {
                showDeleteConfirmation(fileId, fileName);
              }, 2000);
              progressBar.classList.add("active");
            },
            { passive: true }
          );

          card.addEventListener("touchend", function (e) {
            card.classList.remove("active");
            clearTimeout(pressTimer);
            progressBar.classList.remove("active");
            progressBar.style.width = "0";

            // Check if it was a short tap (for selection)
            var pressDuration = new Date().getTime() - pressStart;
            if (pressDuration < 500) {
              toggleFileSelection(card, fileId);
            }
          });

          card.addEventListener("touchcancel", function () {
            card.classList.remove("active");
            clearTimeout(pressTimer);
            progressBar.classList.remove("active");
            progressBar.style.width = "0";
          });
        });

        // Show delete confirmation modal
        function showDeleteConfirmation(id, name) {
          fileToDelete.textContent = name;
          deleteFileId.value = id;
          modal.style.display = "block";
        }
      });
    </script>
  </body>
</html>
