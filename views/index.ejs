<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Processor</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        max-width: 1200px;
        margin-top: 2rem;
      }
      .upload-form,
      .summary-form {
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 5px;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      .nav-links {
        margin-bottom: 2rem;
      }
      .file-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
      }
      .file-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem 1rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid #dee2e6;
        position: relative;
        user-select: none; /* Prevent text selection during interactions */
      }
      .file-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #adb5bd;
      }
      .file-card.selected {
        background-color: #e3f2fd;
        border-color: #0d6efd;
        box-shadow: 0 0 0 2px #0d6efd;
      }
      .file-card.selected .file-number {
        color: #000;
      }
      .file-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #0d6efd;
        margin-bottom: 0.5rem;
      }
      .weight-form {
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
      }
      .weight-input {
        width: 80px;
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        border: 1px solid #ced4da;
      }
      .file-card .file-content {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .delete-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(220, 53, 69, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        border-radius: 6px;
      }
      .file-card.deleting .delete-overlay {
        opacity: 1;
      }

      /* Add this to remove the up/down arrows */
      .weight-input::-webkit-outer-spin-button,
      .weight-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
      .weight-input[type="number"] {
        -moz-appearance: textfield;
      }

      .upload-form {
        justify-content: space-between;
      }

      .summary-form form {
        margin-top: auto;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">TXT to JSON File Processor</h1>

      <div class="nav-links">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/summary" class="btn btn-info">View Summary</a>
      </div>

      <!-- Summary Report and Upload forms in a row -->
      <div class="row mb-4">
        <!-- Summary Report form -->
        <div class="col-md-8">
          <div class="summary-form h-100">
            <h3>Generate Summary Report</h3>
            <p>Select a range of files to include in the summary report.</p>
            <form id="rangeSelectForm" onsubmit="selectFileRange(event)">
              <div class="row">
                <div class="col-md-5">
                  <label for="minFile" class="form-label">From File #</label>
                  <input
                    type="number"
                    class="form-control"
                    id="minFile"
                    name="minFile"
                    placeholder="e.g., 240"
                  />
                </div>
                <div class="col-md-5">
                  <label for="maxFile" class="form-label">To File #</label>
                  <input
                    type="number"
                    class="form-control"
                    id="maxFile"
                    name="maxFile"
                    placeholder="e.g., 250"
                  />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                  <button type="submit" class="btn btn-info w-100">
                    Select Data
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <!-- Upload form -->
        <div class="col-md-4">
          <div class="upload-form h-100">
            <form
              action="/upload"
              method="post"
              enctype="multipart/form-data"
              class="d-flex justify-content-between align-items-center h-100"
            >
              <h2 class="mb-0">Upload Files</h2>
              <div class="d-flex align-items-center">
                <input
                  type="file"
                  id="files"
                  name="files"
                  accept=".txt"
                  multiple
                  required
                  style="display: none"
                  onchange="this.form.submit()"
                />
                <input type="hidden" name="overwriteAction" value="overwrite" />
                <label
                  for="files"
                  class="btn btn-primary mb-0 d-flex align-items-center"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-upload me-2"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"
                    />
                    <path
                      d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"
                    />
                  </svg>
                  Upload TXT Files
                </label>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Add this hidden form for the View Selected button -->
      <form
        id="viewSelectedForm"
        action="/summary"
        method="get"
        style="display: none"
      >
        <input
          type="hidden"
          name="selectedFiles"
          id="selectedFilesInput"
          value=""
        />
      </form>

      <!-- File grid -->
      <div class="d-flex justify-content-between align-items-center">
        <h2>Processed Files</h2>
        <div>
          <button id="saveAllWeightsBtn" class="btn btn-success me-2">
            Save All Weights
          </button>
          <button id="viewSelectedBtn" class="btn btn-info" disabled>
            View Selected Files
          </button>
        </div>
      </div>

      <% if (files && files.length > 0) { %>
      <div class="file-grid">
        <% var sortedFiles = []; files.forEach(function(file) {
        sortedFiles.push(file); }); sortedFiles.sort(function(a, b) { var numA =
        parseInt((a.filename.match(/^\d+/) || ['0'])[0], 10); var numB =
        parseInt((b.filename.match(/^\d+/) || ['0'])[0], 10); return numA -
        numB; }); sortedFiles.forEach(function(file) { var fileNumber =
        file.filename; var match = file.filename.match(/^(\d+)/); if (match) {
        fileNumber = match[1]; } %>
        <div
          class="file-card"
          data-file-id="<%= file.id %>"
          data-filename="<%= file.filename %>"
        >
          <div class="delete-overlay">Release to Delete</div>
          <div class="file-content">
            <div class="file-number"><%= fileNumber %></div>
            <% if (file.weight) { %>
            <div class="weight-display mb-2">
              <%= (parseFloat(file.weight) * 1000).toFixed(1) %> g
            </div>
            <% } %>
            <div class="weight-form">
              <input
                type="number"
                class="weight-input"
                data-file-id="<%= file.id %>"
                step="1"
                value="<%= file.weight ? (parseFloat(file.weight) * 1000).toFixed(1) : '' %>"
                placeholder="Weight (g)"
                style="text-align: center"
              />
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-info">
        <p>No files uploaded yet. Upload TXT files to process them.</p>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const fileCards = document.querySelectorAll(".file-card");
        const selectedFiles = new Set();
        let pressTimer;
        let isDragging = false;

        // Add this function to handle weight saving
        async function saveWeight(fileId, weight) {
          try {
            const response = await fetch("/update-weights", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                weights: [{ fileId, weight }],
              }),
            });

            const result = await response.json();
            if (result.success) {
              const card = document.querySelector(
                `.file-card[data-file-id="${fileId}"]`
              );
              let weightDisplay = card.querySelector(".weight-display");

              if (!weightDisplay) {
                weightDisplay = document.createElement("div");
                weightDisplay.className = "weight-display mb-2";
                card
                  .querySelector(".file-content")
                  .insertBefore(
                    weightDisplay,
                    card.querySelector(".weight-form")
                  );
              }

              weightDisplay.textContent = `${weight} g`;
              return true;
            }
            return false;
          } catch (error) {
            console.error("Error saving weight:", error);
            return false;
          }
        }

        // Add event listeners to weight inputs
        document
          .querySelectorAll(".weight-input")
          .forEach((input, index, inputs) => {
            input.addEventListener("keypress", async function (e) {
              if (e.key === "Enter") {
                e.preventDefault();
                const weight = this.value;
                const fileId = this.dataset.fileId;

                if (weight) {
                  const success = await saveWeight(fileId, weight);
                  if (success) {
                    // Move to next input if available
                    const nextInput = inputs[index + 1];
                    if (nextInput) {
                      nextInput.focus();
                    } else {
                      this.blur(); // Remove focus if it's the last input
                    }
                  }
                }
              }
            });
          });

        // Fix Save All Weights functionality
        const saveAllWeightsBtn = document.getElementById("saveAllWeightsBtn");

        saveAllWeightsBtn.addEventListener("click", async function () {
          const weightInputs = document.querySelectorAll(".weight-input");
          const weights = [];

          weightInputs.forEach((input) => {
            const fileId = input.dataset.fileId;
            const weight = input.value;
            if (weight) {
              weights.push({ fileId, weight });
            }
          });

          if (weights.length === 0) {
            alert("No weights to save!");
            return;
          }

          try {
            const response = await fetch("/update-weights", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ weights }),
            });

            const result = await response.json();

            if (result.success) {
              // Update all weight displays
              weights.forEach(({ fileId, weight }) => {
                const card = document.querySelector(
                  `.file-card[data-file-id="${fileId}"]`
                );
                let weightDisplay = card.querySelector(".weight-display");

                if (!weightDisplay) {
                  weightDisplay = document.createElement("div");
                  weightDisplay.className = "weight-display mb-2";
                  card
                    .querySelector(".file-content")
                    .insertBefore(
                      weightDisplay,
                      card.querySelector(".weight-form")
                    );
                }

                weightDisplay.textContent = `${weight} g`;
              });

              alert("All weights saved successfully!");
            } else {
              throw new Error("Failed to save weights");
            }
          } catch (error) {
            console.error("Error saving weights:", error);
            alert("Error saving weights. Please try again.");
          }
        });

        // Helper function to update the summary form with selected files
        function updateSummaryForm() {
          const viewSelectedBtn = document.getElementById("viewSelectedBtn");
          const selectedFilesInput =
            document.getElementById("selectedFilesInput");

          if (selectedFiles.size > 0) {
            viewSelectedBtn.disabled = false;
            viewSelectedBtn.textContent = `View Selected Files (${selectedFiles.size})`;
            const selectedFilesArray = Array.from(selectedFiles);
            selectedFilesInput.value = selectedFilesArray.join(",");
            console.log(
              "Setting selected files input value:",
              selectedFilesInput.value
            ); // Debug log
          } else {
            viewSelectedBtn.disabled = true;
            viewSelectedBtn.textContent = "View Selected Files";
            selectedFilesInput.value = "";
          }
        }

        // Function to handle file selection
        function toggleFileSelection(card) {
          const fileId = card.dataset.fileId;
          if (card.classList.contains("selected")) {
            selectedFiles.delete(fileId);
            card.classList.remove("selected");
          } else {
            selectedFiles.add(fileId);
            card.classList.add("selected");
          }
          updateSummaryForm();
        }

        // Handle range selection
        window.selectFileRange = function (event) {
          event.preventDefault();

          const minFile = parseInt(document.getElementById("minFile").value);
          const maxFile = parseInt(document.getElementById("maxFile").value);

          if (isNaN(minFile) || isNaN(maxFile)) {
            alert("Please enter valid file numbers");
            return;
          }

          // Clear previous selections
          selectedFiles.clear();
          fileCards.forEach((card) => card.classList.remove("selected"));

          // Add new selections
          fileCards.forEach((card) => {
            const filename = card.dataset.filename;
            const fileNumber = parseInt(filename.match(/^\d+/)?.[0]);

            if (fileNumber >= minFile && fileNumber <= maxFile) {
              card.classList.add("selected");
              selectedFiles.add(card.dataset.fileId);
            }
          });

          updateSummaryForm();
        };

        // Handle View Selected button click
        document
          .getElementById("viewSelectedBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            if (selectedFiles.size > 0) {
              document.getElementById("viewSelectedForm").submit();
            }
          });

        // Add click handlers to file cards
        fileCards.forEach((card) => {
          card.addEventListener("click", function (e) {
            if (!e.target.closest("form")) {
              toggleFileSelection(this);
            }
          });

          // Handle long press
          card.addEventListener("mousedown", function (e) {
            if (e.target.closest("form")) return;

            pressTimer = setTimeout(() => {
              card.classList.add("deleting");
            }, 2000);
          });

          card.addEventListener("mousemove", function () {
            isDragging = true;
            clearTimeout(pressTimer);
          });

          card.addEventListener("mouseup", function () {
            clearTimeout(pressTimer);
            if (card.classList.contains("deleting")) {
              if (
                confirm(
                  `Are you sure you want to delete file ${card.dataset.filename}?`
                )
              ) {
                // Handle deletion
              }
            }
          });
        });
      });
    </script>
  </body>
</html>
